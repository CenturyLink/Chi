extends ../layout.pug

block scripts
  script(type="module" src='../../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')
  script(src='../../../js/chi.js')

block variables
  - var title = 'Chi time picker'

block content
  //- Base
  .test-base
    span.-text--h2 Chi time picker base
    chi-label(for="base") Label
    chi-time-picker(
      data-cy="chi-time-picker-base"
      id="base"
      value="01:30"
    )

  //- Active
  .test-active(style="padding-bottom: 300px;")
    span.-text--h2 Chi time picker active
    chi-label(for="active") Label
    chi-time-picker(
      data-cy="chi-time-picker-active"
      id="active"
      active
      value="12:00"
    )

  //- Disabled
  .test-disabled
    span.-text--h2 Chi time picker disabled
    chi-label(for="disabled") Label
    chi-time-picker(
      data-cy="chi-time-picker-disabled"
      id="disabled"
      disabled
    )

  //- Disabled with value
  .test-disabled-value
    span.-text--h2 Chi time picker disabled with value
    chi-label(for="disabled-value") Label
