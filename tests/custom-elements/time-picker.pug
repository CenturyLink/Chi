      value="12:00:45"
    )

  div(style="padding-bottom: 300px;")

  script.
    document.addEventListener('DOMContentLoaded', () => {
      function checkAllTimePickersRendered() {
        const timePickers = document.querySelectorAll('chi-time-picker');

        return Array.from(timePickers).every(x => x.classList.contains('hydrated'));
      }

      const renderCheckInterval = setInterval(function() {
        if (checkAllTimePickersRendered()) {
          setTimeout(() => console.log("backstop_ready") ,3000);
          clearInterval(renderCheckInterval);
        }
      }, 5000);
    });
