extends ../layout.pug

block scripts
  script(type="module" src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')
  script(src='../../js/chi.js')

block variables
  - var title = 'Progress'
  - var states = ['default', 'danger', 'info', 'warning', 'success']

block content
  each max in ['100', '200']
    each state, index in states
      div(class=`test-${state}-max-${max}`)
        .example(style='width:1200px')
          .-p--3
            h3.-mb--3= `Progress / ${state} / ${max}`
            each value, index in [0,25,33.3,50,75,100]
              .-p--1
                .chi-label= `${value}%`
                chi-progress(state=`${state === 'default' ? '' : state}`, max=max, value=value, data-cy=`progress-${value}-${state}-max-${max}`)
