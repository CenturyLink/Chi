extends ../layout.pug

block variables
  - var title = 'Typography'
  - var colors = ['light', 'brand', 'success', 'danger', 'info', 'warning']

block content
  .test-headers
    h3 Headings
    h1 h1 heading - 48px
    h2 h2 heading - 32px
    h3 h3 heading - 24px
    h4 h4 heading - 18px
    h5 h5 heading - 16px
    h6 h6 heading - 14px

  .test-text-utilities
    h3 Text Utilities
    p.-text -text paragraph - 14px
    p.-text--xs -text--xs paragraph - 12px
    p.-text--sm -text--sm paragraph - 13px
    p.-text--md -text--md paragraph - 14px
    p.-text--lg -text--lg paragraph - 16px
    p.-text--xl -text--xl paragraph - 18px

  .test-colors
    h3 Colors
    .chi-grid
      .chi-col
        .-text Default text color
      .chi-col
        .-text .-text
    each modifier in colors
      .chi-grid
        .chi-col
          .-text(class=`-text--${modifier}`)= `${modifier} text color`
        .chi-col
          .-text= `.-text--${modifier}`

