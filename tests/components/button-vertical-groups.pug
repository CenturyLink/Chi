extends ../layout.pug

block scripts
  script(src='../../../js/chi.js')
  script(src='../../../chi-icons.js')
  script(src='../../../chi-marketing-icons.js')
block variables
  - var title = 'Vertical button groups'
  - var sizes = ['default', 'xs', 'sm', 'md', 'lg', 'xl']
  - var variants = ['solid', 'outline', 'flat']
  - var colors = ['default', 'primary', 'secondary', 'danger', 'dark', 'light']

block content
  each size in sizes
    each type, index1 in variants
      div(class={
        [`test-${type}`]: size == 'default',
        [`test-${type}-${size}`]: size != 'default'
      })
        span.-text--h2= `Vertical button groups / ${type} / ${size}`
        table(cellpadding="0", cellspacing="0")
          tr
            each style in colors
              if (style === 'light')
                each val, index2 in [2,4]
                  td(style="vertical-align:top").-bg--black
                    .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                      while val > 0
                        - val--
                        button.chi-button(class={
                            [`-${type}`]: type != 'solid',
                            [`-${style}`]: style != 'default',
                            [`-${size}`]: size != 'default'
                          },
                          aria-label='Button action') Button
              else
                each val, index2 in [2,4]
                  td(style="vertical-align:top")
                    .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                      while val > 0
                        - val--
                        button.chi-button(class={
                            [`-${type}`]: type != 'solid',
                            [`-${style}`]: style != 'default',
                            [`-${size}`]: size != 'default'
                          },
                          aria-label='Button action') Button

        table(cellpadding="0", cellspacing="0")
          tr
            each style in colors
              if (style === 'light')
                each val, index2 in [2,4]
                  td(style="vertical-align:top").-bg--black
                    .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                      while val > 0
                        - val--
                        button.chi-button.-icon(class={
                            [`-${type}`]: type != 'solid',
                            [`-${style}`]: style != 'default',
                            [`-${size}`]: size != 'default'
                          },
                          aria-label='Button action')
                            .chi-button__content
                              .chi-icon
                                svg
                                  use(xlink:href='#icon-atom')
