extends ../layout.pug

block scripts
  script(src='../../js/ce/ux-chi-ce/ux-chi-ce.js')
  script(src='../../js/chi.js')
  script(src='../../chi-icons.js')
  script(src='../../chi-marketing-icons.js')
block variables
  - var title = 'Breadcrumb'
  - var sizes = ['xs', 'sm', 'md', 'lg', 'xl']

block content
  h4 Base
  .test-base
    .example
      .-p--3
        nav.chi-breadcrumb(aria-label="Breadcrumb")
          ol
            li.chi-breadcrumb__item
              a(href='#') Parent
            li.chi-breadcrumb__item
              a(href='#') Child 1
            li.chi-breadcrumb__item.-active
              a(href='#',aria-current="page") Child 2

  h4 Alternative Separator
  .test-alternative-separator
    .example
      .-p--3
        nav.chi-breadcrumb.-alt(aria-label="Breadcrumb")
          ol
            li.chi-breadcrumb__item
              a(href='#') Parent
            li.chi-breadcrumb__item
              a(href='#') Child 1
            li.chi-breadcrumb__item.-active
              a(href='#',aria-current="page") Child 2

  h4 Sizes
  .test-sizes
    table(cellpadding="0", cellspacing="0", width="600px")
      each size in sizes
        tr
          td
            h5= `${size}`
            td
              .-m--1
                nav(class=`chi-breadcrumb -${size}`, aria-label='Breadcrumb')
                  ol
                    li.chi-breadcrumb__item
                      a(href='#') Parent
                    li.chi-breadcrumb__item
                      a(href='#') Child 1
                    li.chi-breadcrumb__item.-active
                      a(href='#',aria-current="page") Child 2
      each size in ['xs', 'sm', 'md', 'lg', 'xl']
        tr
          td
            h5= `${size}`
            td
              .-m--1
                nav(class=`chi-breadcrumb -alt -${size}`, aria-label='Breadcrumb')
                  ol
                    li.chi-breadcrumb__item
                      a(href='#') Parent
                    li.chi-breadcrumb__item
                      a(href='#') Child 1
                    li.chi-breadcrumb__item.-active
                      a(href='#',aria-current="page") Child 2
