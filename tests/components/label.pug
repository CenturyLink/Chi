      label.chi-label.-xs
        | Label
        .chi-label__help
          button.chi-button.-icon.-xs.-flat(id="example__help-button" aria-label="Help" data-target="#example__help-popover" data-position="bottom")
            .chi-icon
              svg(xmlns='http://www.w3.org/2000/svg' aria-hidden='true')
                use.sc-chi-icon(xlink:href='#icon-circle-info-outline')
          section.chi-popover.chi-popover--bottom(id="example__help-popover" aria-modal="true" role="dialog")
            .chi-popover__content
              p.chi-popover__text
