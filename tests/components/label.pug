extends ../layout.pug

block scripts
  script(src='../../js/chi.js')
  script(src='../../chi-icons.js')
  script(src='../../chi-marketing-icons.js')
block variables
  - var title = 'Label'

block content
  h3 Base
  .test-label-base.-w--100
    .test-label-base-xs.-w--100
        label.chi-label.-xs Label
    .test-label-base-sm.-w--100
        label.chi-label.-sm Label
    .test-label-base-md.-w--100
        label.chi-label.-md Label
    .test-label-base-lg.-w--100
        label.chi-label.-lg Label
    .test-label-base-xl.-w--100
        label.chi-label.-xl Label

  h3 Required
  .test-label-required.-w--100
    .test-label-required-xs.-w--100
      label.chi-label.-xs
        | Label
        abbr.chi-label__required(aria-label='Required field') *
    .test-label-required-sm.-w--100
