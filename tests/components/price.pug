extends ../layout.pug

block scripts
  script(src='../../../js/chi.js')
  script(src='../../../chi-icons.js')
  script(src='../../../chi-marketing-icons.js')
block variables
  - var title = 'Price'
  - var sizes = ['sm', 'md', 'lg'];

block content
  h4 Base
  .test-base
    .example.-mb--3
      .-p--3
        div(class=`chi-col -w--12 -p--3`)
          .chi-price
            sup
              | $
            | 100
            sup
              | 00

  h4 Sizes
  .test-sizes
    .example.-mb--3
      .-p--3
        each size in sizes
          div(class=`chi-col -w--12 -p--3`)
            .chi-price(class=`-${size}`)
              sup
                | $
              | 100
              sup
                | 00
            p(class=`-text--bold -mb--3`)= '-' + size
