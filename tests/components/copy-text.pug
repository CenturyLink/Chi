extends ../layout.pug

block scripts
  script(src='../../js/chi.js')
  script(src='../../chi-icons.js')
  script(src='../../chi-marketing-icons.js')
block variables
  - var title = 'Copy Text'
  - var sizes = ['xs', 'sm', 'md', 'lg', 'xl'];

block content
  h3 Base
  .test-copy-text-base
    .-p--2
      span This is an example text
      button(class="chi-button -icon -flat" aria-label="Edit")
        .chi-button__content
          .chi-icon
            svg(aria-hidden='true')
              use(xlink:href='#icon-copy')

  h3 Disabled
  .test-copy-text-disabled
    .-p--2
      span This is an example text
      button(class="chi-button -icon -flat" aria-label="Edit" disabled)
        .chi-button__content
          .chi-icon
            svg(aria-hidden='true')
              use(xlink:href='#icon-copy')

  h3 Sizes
  .test-copy-text-sizes
    .-d--flex.-align-items--end
      each size in sizes
        .-m--1
          button(class="chi-button -icon -flat" aria-label="Edit")
            .chi-button__content
              .chi-icon(class=`-${size}`)
                svg(aria-hidden='true')
                  use(xlink:href='#icon-copy')
          p.-text.-text--center #{size}
