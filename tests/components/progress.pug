extends ../layout.pug

block scripts
  script(src='../../js/chi.js')
  script(src='../../chi-icons.js')
  script(src='../../chi-marketing-icons.js')
block variables
  - var title = 'Progress'
  - var states = ['default', 'danger', 'info', 'warning', 'success']

block content
  each max in ['100', '200']
    each state, index in states
      div(class=`test-${state}-max-${max}`)
        .example(style='width:1200px')
          .-p--3
            h3.-mb--3= `Progress / ${state} / ${max}`
            each value, index in [0,25,33.3,50,75,100]
              .-p--1
                .chi-label= `${value}%`
                progress( class=`-${state}` value=`${value}` max=max)
