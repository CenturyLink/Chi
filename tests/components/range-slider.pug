extends ../layout.pug

block variables
  - var title = 'Range slider'

block content
  h4 States
  .test-states
    .-mb--1
      h5.test-base Base
      input(type="range", class="chi-range-slider", value="30")

    .-mb--1
      h5.test-zero Zero
      input(type="range", class="chi-range-slider -zero", value="0")

    .-mb--1
      h5.test-zero Focus
      input(type="range", class="chi-range-slider -focus", value="80")

    .-mb--1
      h5.test-disabled Disabled
      input(type="range", class="chi-range-slider", value="20", disabled)

    .-mb--1
      h5.test-lateral-labels With lateral labels
      .chi-form__item.-row
        label.-text.-mr--2 200GB
        input(type="range", class="chi-range-slider")
        label.-text.-ml--2 5TB

    .-mb--1
      h5.test-track-lables With labels
      .chi-input__wrapper
        input(class='chi-range-slider', type='range', min='0', max='4', step='1')
        .chi-input__tick-bar
          div
            .chi-input__tick
            .chi-input__tick-label Monthly
          div
            .chi-input__tick
            .chi-input__tick-label 1 year
          div
            .chi-input__tick
            .chi-input__tick-label 2 years
          div
            .chi-input__tick
            .chi-input__tick-label 3 years
          div
            .chi-input__tick
            .chi-input__tick-label > 3 years

    .-mb--1
      h5.test-interoperability-base Base consistent rendering
      .chi-input__wrapper
        input(class="chi-range-slider", type="range")
        .chi-input__progress
        .chi-input__thumb

    .-mb--1
      h5.test-interoperability-disabled Disabled consistent rendering
      .chi-input__wrapper
        input(class="chi-range-slider", type="range", disabled)
        .chi-input__progress
        .chi-input__thumb

    .-mb--1
      h5.test-interoperability-lateral-lables With lateral labels consistent rendering
      .chi-form__item.-row
        label.-text.-mr--2 200GB
        .chi-input__wrapper.-w--100
          input(type="range", class="chi-range-slider")
          .chi-input__progress
          .chi-input__thumb
        label.-text.-ml--2 5TB

    .-mb--1
      h5.test-interoperability-track-labels With track labels
      .chi-input__wrapper
        input(class='chi-range-slider', type='range', min='0', max='4', step='1')
        .chi-input__tick-bar
          div
            .chi-input__tick
            .chi-input__tick-label Monthly
          div
            .chi-input__tick
            .chi-input__tick-label 1 year
          div
            .chi-input__tick
            .chi-input__tick-label 2 years
          div
            .chi-input__tick
            .chi-input__tick-label 3 years
          div
            .chi-input__tick
            .chi-input__tick-label > 3 years
        .chi-input__progress
        .chi-input__thumb
