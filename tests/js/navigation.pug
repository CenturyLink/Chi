extends ../layout

block scripts
  script(src='../../js/chi.js')
  script(src='../../chi-icons.js')
  script(src='../../chi-marketing-icons.js')

block variables
  - var title = 'Tabs Navigation example'

block content
  h3 Navigation
  button#dispose-btn.chi-button Dispose navigation

  ul.chi-tabs#navigation-components-contained.-mb--4.-w--100
    li.-active.chi-dropdown
      a.chi-dropdown__trigger.-animate(href="#") Active Tabi
      .chi-dropdown__menu(x-placement="bottom-start")
        a.chi-dropdown__menu-item(href="#") Elem 1
        a.chi-dropdown__menu-item(href="#") Elem 2
        div
          a.chi-dropdown__menu-item.chi-dropdown__trigger(data-cy="inner-dropdown"  href="#") Elem 3 more
          .chi-dropdown__menu
            a.chi-dropdown__menu-item(href="#") Elem 3.1
            a.chi-dropdown__menu-item(href="#") Elem 3.2
            a.chi-dropdown__menu-item(href="#") Elem 3.3
            a.chi-dropdown__menu-item(href="#") Elem 3.4
        a.chi-dropdown__menu-item(href="#") Elem 4
    li
      a(href="#") Tab Link
    li
      a(href="#") Tab Link
    li.chi-dropdown
      a.chi-dropdown__trigger(href="#") Tab Link
      .chi-dropdown__menu
        a.chi-dropdown__menu-item(href="#") Element 1
        a.chi-dropdown__menu-item(href="#") Element 2
        a.chi-dropdown__menu-item(href="#") Element 3

  script.
    const navigationConfig = {
      overflowMenu: true,
      overflowMenuLabel: 'See more...',
      waitForAnimations: true,
    };

    const navigation = chi.navigation(document.getElementById('navigation-components-contained'), navigationConfig);

    const disposeButton = document.getElementById("dispose-btn");

    disposeButton.addEventListener("click", () => {
      console.log('dispose', navigation);
      navigation.dispose();
    });



