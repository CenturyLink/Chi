extends ../layout.pug

block scripts
  script(src='../../js/chi.js')
  script(src='../../chi-icons.js')
  script(src='../../chi-marketing-icons.js')

block variables
  - var title = 'Enterprise Chi Drawer test cases Pug'

block content
  h2 Chi Drawer - left
  button#drawer-trigger-1.chi-button.-icon.chi-drawer__trigger(data-target='#drawer-1', aria-label='Toggle navigation')
    .chi-button__content
      i.chi-icon.-sm--2.icon-menu(aria-hidden="true")
  .chi-backdrop.-closed
    .chi-backdrop__wrapper
      #drawer-1.chi-drawer.-left
        .chi-drawer__header
          button.chi-button.-icon.-close(aria-label='Close')
            .chi-button__content
              i.chi-icon.icon-x(aria-hidden="true")
        .chi-drawer__content
          .-px--2.-text Drawer content here

  h2 Chi Drawer - right
  button#drawer-trigger-5.chi-button.-icon.chi-drawer__trigger(data-target='#drawer-5', aria-label='Toggle navigation')
    .chi-button__content
      i.chi-icon.-sm--2.icon-menu(aria-hidden="true")
  #drawer-5.chi-drawer.-right
    .chi-drawer__header
      button.chi-button.-icon.-close(aria-label='Close')
        .chi-button__content
          i.chi-icon.icon-x(aria-hidden="true")
    .chi-drawer__content
      .-px--2.-text Drawer content here

  h2 Chi Drawer - top
  button#drawer-trigger-7.chi-button.-icon.chi-drawer__trigger(data-target='#drawer-7', aria-label='Toggle navigation')
    .chi-button__content
      i.chi-icon.-sm--2.icon-menu(aria-hidden="true")
  #drawer-7.chi-drawer.-top
    .chi-drawer__header
      button.chi-button.-icon.-close(aria-label='Close')
        .chi-button__content
          i.chi-icon.icon-x(aria-hidden="true")
    .chi-drawer__content
      .-px--2.-text Drawer content here

  h2 Chi Drawer - bottom
  button#drawer-trigger-9.chi-button.-icon.chi-drawer__trigger(data-target='#drawer-9', aria-label='Toggle navigation')
    .chi-button__content
      i.chi-icon.-sm--2.icon-menu(aria-hidden="true")
  #drawer-9.chi-drawer.-bottom
    .chi-drawer__header
      button.chi-button.-icon.-close(aria-label='Close')
        .chi-button__content
          i.chi-icon.icon-x(aria-hidden="true")
    .chi-drawer__content
      .-px--2.-text Drawer content here

  h2 Chi Drawer - backdrop
  button#drawer-trigger-11.chi-button.-icon.chi-drawer__trigger(data-target='#drawer-11', aria-label='Toggle navigation')
    .chi-button__content
      i.chi-icon.-sm--2.icon-menu(aria-hidden="true")
  .chi-backdrop.-closed
    .chi-backdrop__wrapper
      #drawer-11.chi-drawer.-bottom
        .chi-drawer__header
          button.chi-button.-icon.-close(aria-label='Close')
            .chi-button__content
              i.chi-icon.icon-x(aria-hidden="true")
        .chi-drawer__content
          .-px--2.-text Drawer content here

  h2 Chi Drawer - Titled
  button#drawer-trigger-13.chi-button.-icon.chi-drawer__trigger(data-target='#drawer-13', aria-label='Toggle navigation')
    .chi-button__content
      i.chi-icon.-sm--2.icon-menu(aria-hidden="true")
  .chi-backdrop.-closed
    .chi-backdrop__wrapper
      #drawer-13.chi-drawer.-left
        .chi-drawer__header
          span.chi-drawer__title
            | Drawer title here
          button.chi-button.-icon.-close(aria-label='Close')
            .chi-button__content
              i.chi-icon.icon-x(aria-hidden="true")
        .chi-drawer__content
          .-px--2.-text Drawer content here

  h2 Chi Drawer - Portal
  button#drawer-trigger-23.chi-button.-primary.chi-drawer__trigger(data-target='#drawer-23') Launch demo drawer
  .chi-backdrop.-closed
    .chi-backdrop__wrapper
      #drawer-23.chi-drawer.-bottom.-portal
        .chi-drawer__header
          span.chi-drawer__title
            | Drawer title here
          button.chi-button.-icon.-close(aria-label='Close')
            .chi-button__content
              i.chi-icon.icon-x(aria-hidden="true")
        .chi-drawer__content
          .-p--2.-text Drawer content here

  script.
    chi.drawer(document.getElementById('drawer-trigger-1'));
    chi.drawer(document.getElementById('drawer-trigger-5'));
    chi.drawer(document.getElementById('drawer-trigger-7'));
    chi.drawer(document.getElementById('drawer-trigger-9'));
    chi.drawer(document.getElementById('drawer-trigger-11'));
    chi.drawer(document.getElementById('drawer-trigger-13'));
    chi.drawer(document.getElementById('drawer-trigger-23'));
