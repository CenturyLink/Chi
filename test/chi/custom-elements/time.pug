---
title: Chi time
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')

.test-base
  span.-text--h2 Chi time base
  chi-time(data-cy="chi-time-base")

.test-active-with-value
  span.-text--h2 Chi time active with seconds and value
  chi-time(data-cy="chi-time-active" display-seconds value="09:32:43")

.test-stepped
  span.-text--h2 Chi time stepped
  chi-time(data-cy="chi-time-stepped" stepped display-seconds)

.test-steps-without-value
  span.-text--h2 Chi time with default steps
  chi-time(data-cy="chi-time-default-step" value="10:53:32" minutes-step seconds-step display-seconds)

//- minutes steps
.test-custom-steps-period-change
  span.-text--h2 Chi time with 5 min step
  chi-time(data-cy="chi-time-custom-steps-period-change" value="11:57:32" minutes-step="5" display-seconds)

.test-custom-steps-10-min
  span.-text--h2 Chi time with 10 min step
  chi-time(data-cy="chi-time-custom-10-min-step" value="11:23:43" minutes-step="10" )

.test-custom-steps-15-min
