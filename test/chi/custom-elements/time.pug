.test-custom-steps-30-min
  span.-text--h2 Chi time with 30 min step
  chi-time(data-cy="chi-time-custom-30-min-step" value="11:23:43" minutes-step="30" )

//- seconds steps
.test-custom-steps-5-seconds
  span.-text--h2 Chi time with 5 seconds step
  chi-time(data-cy="chi-time-custom-5-seconds-step" value="11:23:43" display-seconds seconds-step="5" )

.test-custom-steps-10-seconds
