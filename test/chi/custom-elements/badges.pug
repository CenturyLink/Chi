---
title: Badges
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')

each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.-text--h2= `Badge / ${type}`
    div.-d--flex.-flex--wrap(style="gap: 1rem;")
      each style in ['base', 'primary', 'secondary', 'success', 'warning', 'danger', 'dark', 'muted', 'light', 'accent-1', 'accent-2', 'accent-3', 'accent-4', 'accent-5']
        chi-badge(class='-mr--1', variant=`${type === 'solid' ? '' : type}`, color=`${style === 'base' ? '' : style}`, id=`badge-${type}-${style}` )= `${style}`
        chi-badge(class='-mr--1', variant=`${type === 'solid' ? '' : type}`, color=`${style === 'base' ? '' : style}`, id=`badge-icon-${type}-${style}` )
          chi-icon(icon='atom')
          span= style

h2 Badge Icons
.test-badge-icons
  .example.-mb--1
    each size in ['xs', 'sm', 'default']
      .p.-text--bold= size
        chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1', id=`badge-${size}`)
          chi-icon(icon='atom')
          span Badge
        chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
          span Badge
          chi-icon(icon='atom')
        chi-badge(size=`${size === 'default' ? '' : size}`, class='-m--1')
          chi-icon(icon='atom')
          span Badge
          chi-icon(icon='atom')

h2 Text Transform
.test-text-transform
  .example.-mb--1
    each transform, text in { BADGE: 'uppercase', badge: 'lowercase', Badge: 'capitalized' }
      .p.-text--bold= transform
        chi-badge(text-transform= transform, class='-m--1', id=`badge-${transform}`)= text

h2 Text Weight
.test-text-weight
  .example.-mb--1
    each weight in ['normal', 'semi-bold', 'bold']
      .p.-text--bold= weight
        chi-badge(text-weight= weight, class='-m--1', id=`badge-${weight}`) Badge
