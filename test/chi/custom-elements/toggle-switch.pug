---
title: Toggle switch
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')
script(nomodule='' src='../../js/ce/ux-chi-ce/ux-chi-ce.js')

.test-states
  .-mb--1
    h5 Base
    .chi-form__item
      chi-switch(id='toggle1',data-cy='toggle1', label='Label')

  .-mb--1
    h5 Hover
    .chi-form__item
      chi-switch(id='toggle2', extra-class='-hover', data-cy='toggle2', label='Label')

  .-mb--1
    h5 Focus
    .chi-form__item
      chi-switch(id='toggle3', extra-class='-focus', data-cy='toggle3', label='Label')

  .-mb--1
    h5 Disabled
    .chi-form__item
      chi-switch(id='toggle4', disabled, data-cy='toggle4', label='Label')

.test-hide-label-states
  .-mb--1
    h5 Base
    .chi-form__item
      chi-switch(id='toggle5',data-cy='toggle5', label='Label', hide-label)

  .-mb--1
    h5 Hover
    .chi-form__item
      chi-switch(id='toggle6', extra-class='-hover', data-cy='toggle6', label='Label', hide-label)

  .-mb--1
    h5 Focus
    .chi-form__item
      chi-switch(id='toggle7', extra-class='-focus', data-cy='toggle7', label='Label', hide-label)

  .-mb--1
    h5 Disabled
    .chi-form__item
      chi-switch(id='toggle8', disabled, data-cy='toggle8', label='Label', hide-label)

.test-sizes
  .-mb--1
    h5 -xs
    .chi-form__item
      chi-switch(id='toggle9',data-cy='toggle9', label='Label', size='xs')

  .-mb--1
    h5 -sm
    .chi-form__item
      chi-switch(id='toggle10', data-cy='toggle10', label='Label', size='sm')
            
style.
  chi-switch {
    display: inline-block !important;
  }
