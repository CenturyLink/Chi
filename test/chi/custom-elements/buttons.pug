                      type='icon'
                      outline= type === 'outline'
                      flat= type === 'flat'
                      fluid= type === 'fluid'
                      pill
                      disabled= state === 'disabled'
                      extra-class= `-${state}`
                    )
                      chi-icon(icon='atom')
                    chi-button.-m--1(
                      color=style
                      size= size !== 'default' ? size : ''
                      pill
                      outline= type === 'outline'
                      flat= type === 'flat'
                      fluid= type === 'fluid'
                      disabled= state === 'disabled'
                      extra-class= `-${state}`
                    )
                      chi-icon(icon='atom')
                      span Button
              else
                td
                  .-mr--2
