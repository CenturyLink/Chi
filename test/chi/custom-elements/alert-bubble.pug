---
title: Alert Bubbles
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')
script(nomodule='' src='../../js/ce/ux-chi-ce/ux-chi-ce.js')

each size in ['default', 'sm', 'lg']
  h4 Default / #{size}
  div(class=`test-bubble-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-alert.-m--2(class=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-${type}-${size}`)
          =`This is ${type === 'info' ? 'an' : 'a'} ${type} alert`
      else
        chi-alert.-m--2(color=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-${type}-${size}`)
          =`This is ${type === 'info' ? 'an' : 'a'} ${type} alert`
  h4 Centered / #{size}
  div(class=`test-bubble-center-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-alert.-m--2(class=type, icon=val, center, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-center-${type}-${size}`)
          =`This is ${type === 'info' ? 'an' : 'a'} centered ${type} alert`
      else
        chi-alert.-m--2(color=type, icon=val, center, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-center-${type}-${size}`)
          =`This is ${type === 'info' ? 'an' : 'a'} centered ${type} alert`
  h4 Dismissible / #{size}
  div(class=`test-bubble-dismissible-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-alert.-m--2(class=type, icon=val, closable, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-dismissible-${type}-${size}`)
          =`This is a dismissible ${type} alert`
      else
        chi-alert.-m--2(color=type, icon=val, closable, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-dismissible-${type}-${size}`)
          =`This is a dismissible ${type} alert`
  h4 Titled / #{size}
  div(class=`test-bubble-titled-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-alert.-m--2(class=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-titled-${type}-${size}`, title=type)
          =`This is a titled ${type} alert`
      else
        chi-alert.-m--2(color=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-titled-${type}-${size}`, title=type)
          =`This is a titled ${type} alert`
  h4 Actionable / #{size}
  div(class=`test-bubble-actionable-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-alert.-m--2(class=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-titled-${type}-${size}`, title=type)
          =`This is a ${size} ${type} actionable alert`
          button(slot="chi-alert__actions", class=`-${size}`).chi-button Secondary action
          button(slot="chi-alert__actions", class=`-${size}`).chi-button.-primary Primary action
      else
        chi-alert.-m--2(color=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-actionable-${type}-${size}`, title=type)
          =`This is a ${size} ${type} actionable alert`
          button(slot="chi-alert__actions", class=`-${size}`).chi-button Secondary action
          button(slot="chi-alert__actions", class=`-${size}`).chi-button.-primary Primary action
  h4 Clickable Link Alert / #{size}
  div(class=`test-bubble-clickable-link-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-link.-d--block.-mb--2(href='#' no-hover-underline)
          chi-alert.-w--100(class=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-clickable-link-${type}-${size}`)
            .-d--flex
              span(class=`-text--semi-bold -text--${type} -flex--grow1`)
                =`This is ${type === 'info' ? 'an' : 'a'} ${type} clickable button alert`
              chi-icon(icon='chevron-right')
      else
        chi-link.-d--block.-mb--2(href='#' no-hover-underline)
          chi-alert.-w--100(color=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-clickable-link-${type}-${size}`)
            .-d--flex
              span(class=`-text--semi-bold -text--${type} -flex--grow1`)
                =`This is ${type === 'info' ? 'an' : 'a'} ${type} clickable button alert`
              chi-icon(icon='chevron-right')
  h4 Clickable Button Alert / #{size}
  div(class=`test-bubble-clickable-button-${size} -w--100`)
    each val, type in {base:'circle-info', success:'circle-check', danger:'circle-warning', warning:'warning', info:'circle-info', muted:'circle-info'}
      if (type === 'base')
        chi-button(variant='flat' extra-class='-p--0 -text--no-transform -no-hover -mb--2' fluid)
          chi-alert.-w--100(class=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-clickable-button-${type}-${size}`)
            .-d--flex
              span(class=`-text--semi-bold -text--${type} -flex--grow1`)
                =`This is ${type === 'info' ? 'an' : 'a'} ${type} clickable button alert`
              chi-icon(icon='chevron-right')
      else
        chi-button(variant='flat' extra-class='-p--0 -text--no-transform -no-hover -mb--2' fluid)
          chi-alert.-w--100(color=type, icon=val, size=`${size === 'default' ? '' : size}`, data-cy=`alert-bubble-clickable-button-${type}-${size}`)
            .-d--flex
              span(class=`-text--semi-bold -text--${type} -flex--grow1`)
                =`This is ${type === 'info' ? 'an' : 'a'} ${type} clickable button alert`
              chi-icon(icon='chevron-right')
