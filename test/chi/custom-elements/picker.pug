---
title: Picker
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')

- var sizes = ['md', 'lg'];
- var pickerSizes = ['sm', 'xs'];

.chi-grid.-no-gutter.-w--100
  .chi-col.-w--12
    h2 Multi-select pickers
    .chi-grid.-no-gutter.-w--100
      .chi-col.-w--12.-w-lg--6
        h3 Base
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-base-${size}`)
                chi-picker(label="Select options" size=size)
      .chi-col.-w--12.-w-lg--6
        h3 Base checked
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-base-checked-${size}`)
                chi-picker(label="Select options" size=size)
      .chi-col.-w--12.-w-lg--6
        h3 Disabled
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-disabled-${size}`)
                chi-picker(label="Select options" size=size)

      .chi-col.-w--12.-w-lg--6

      .chi-col.-w--12.-w-lg--6
        h3 With checkbox
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-with-checkbox-${size}`)
                chi-picker(label="Select options" size=size show-input)


      .chi-col.-w--12.-w-lg--6
        h3 With checkbox checked
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-with-checkbox-checked-${size}`)
                chi-picker(label="Select options" size=size show-input)

      .chi-col.-w--12.-w-lg--6
        h3 With description
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-with-description-${size}`)
                chi-picker(label="Select options" size=size show-input)

      .chi-col.-w--12.-w-lg--6
        h3 With description checked
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-with-description-checked-${size}`)
                chi-picker(label="Select options" size=size show-input)

  .chi-col.-w--12
    h2 Single-select pickers
    .chi-grid.-no-gutter.-w--100
      .chi-col.-w--12.-w-lg--6
        h3 Base
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-type-radio-${size}`)
                chi-picker(label="Legend" size=size type="radio")

      .chi-col.-w--12.-w-lg--6
        h3 Base checked
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-type-radio-checked-${size}`)
                chi-picker(label="Legend" size=size type="radio")

      .chi-col.-w--12.-w-lg--6
        h3 With radio
        .example.-mb--3
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-with-radio-${size}`)
                chi-picker(label="Legend" size=size type="radio" show-input)

      .chi-col.-w--12.-w-lg--6
        h3 With radio checked
        .example.-mb--3
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-with-radio-checked-${size}`)
                chi-picker(label="Legend" size=size type="radio" show-input)

      .chi-col.-w--12.-w-lg--6
        h3 With description
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-radio-with-description-${size}`)
                chi-picker(label="Legend" size=size type="radio" show-input)

      .chi-col.-w--12.-w-lg--6
        h3 With description checked
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-radio-with-description-checked-${size}`)
                chi-picker(label="Legend" size=size type="radio" show-input)

      .chi-col.-w--12.-w-lg--6
        h3 With price
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-radio-with-price-${size}`)
                chi-picker(label="Legend" size=size type="radio" show-input)
                  each i in [1,2]
                    div(slot=`content-end-${i}`).chi-picker__label
                      | $0.00
                      span.-text--normal /mo
                
      .chi-col.-w--12.-w-lg--6
        h3 With price checked
        .example
          .-p--3
            each size in sizes
              h4= `${size}`
              div(class=`test-radio-with-price-checked-${size}`)
                chi-picker(label="Legend" size=size type="radio" show-input)
                  each i in [1,2]
                    div(slot=`content-end-${i}`).chi-picker__label
                      | $0.00
                      span.-text--normal /mo

.chi-col.-w--12
  h2 Pill
  .-w--100
    .example
      each size in pickerSizes
        h4= `${size}`
        div(class=`test-type-pill-${size}`)
          chi-picker(label="Legend" size=size pill)

.chi-col.-w--12
  h2 With error message
  .-w--100
    .example
      .test-with-error-message
        chi-picker(label="Select options" required state="danger" helper-message="Please select an option")

.chi-col.-w--12.-w-lg--6
  h3 With description and no input
  .example
    .-p--3
      each size in sizes
        h4= `${size}`
        div(class=`test-with-description-no-input-${size}`)
          chi-picker(label="Select options" size=size)

script.
  const description = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer vehicula placerat iaculis. Ut rutrum pulvinar velit vitae molestie. Phasellus accumsan pharetra ex. Nulla iaculis velit sed velit vehicula dictum. Donec ut ultrices tortor. Vivamus sit amet lorem augue.';

  document.addEventListener('DOMContentLoaded', () => {
    [...document.querySelectorAll('[class^="test-base"] chi-picker')].forEach(el => {
      el.options = [{label: 'Checkbox1'}, {label: 'Checkbox2'},];
    });

    [...document.querySelectorAll('[class^="test-base-checked"] chi-picker')].forEach(el => {
      el.options = [{label: 'Checkbox1', checked: true}, {label: 'Checkbox2'},];
    });

    [...document.querySelectorAll('[class^="test-disabled"] chi-picker')].forEach(el => {
      el.options = [{label: 'Checkbox1', disabled: true}, {label: 'Checkbox2'},];
    });

    [...document.querySelectorAll('[class^="test-with-checkbox"] chi-picker')].forEach(el => {
      el.options = [{label: 'Checkbox1',}, {label: 'Checkbox2'},];
    });

    [...document.querySelectorAll('[class^="test-with-checkbox-checked"] chi-picker')].forEach(el => {
      el.options = [{label: 'Checkbox1', checked: true}, {label: 'Checkbox2'},];
    });

    [...document.querySelectorAll('[class^="test-with-description"] chi-picker')].forEach(el => {
      el.options = [
        {label: 'Checkbox1', description: description}, 
        {label: 'Checkbox2', description: description},
      ];
    });

    [...document.querySelectorAll('[class^="test-with-description-checked"] chi-picker')].forEach(el => {
      el.options = [
        {label: 'Checkbox1', checked: true, description: description}, 
        {label: 'Checkbox2', description: description},
      ];
    });

    [...document.querySelectorAll('[class^="test-type-radio"] chi-picker')].forEach(el => {
      el.options = [{label: 'Radio1',}, {label: 'Radio2'},];
    });

    [...document.querySelectorAll('[class^="test-type-radio-checked"] chi-picker')].forEach(el => {
      el.options = [{label: 'Radio1', checked: true}, {label: 'Radio2'},];
    });

    [...document.querySelectorAll('[class^="test-with-radio"] chi-picker')].forEach(el => {
      el.options = [{label: 'Radio1',}, {label: 'Radio2'},];
    });

    [...document.querySelectorAll('[class^="test-with-radio-checked"] chi-picker')].forEach(el => {
      el.options = [{label: 'Radio1', checked: true}, {label: 'Radio2'},];
    });
    
    [...document.querySelectorAll('[class^="test-radio-with-description"] chi-picker')].forEach(el => {
      el.options = [
        {label: 'Radio1', description: description}, 
        {label: 'Radio2', description: description},
      ];
    });

    [...document.querySelectorAll('[class^="test-radio-with-description-checked"] chi-picker')].forEach(el => {
      el.options = [
        {label: 'Radio1', checked: true, description: description}, 
        {label: 'Radio2', description: description},
      ];
    });

    [...document.querySelectorAll('[class^="test-radio-with-price"] chi-picker')].forEach(el => {
      el.options = [
        {
          label: 'Option 1',
          id: '1',
          description: description,
        }, 
        {
          label: 'Option 1',
          id: '2',
          description: description,
        },
      ];
    });

    [...document.querySelectorAll('[class^="test-radio-with-price-checked"] chi-picker')].forEach(el => {
      el.options = [
        {
          label: 'Option 1',
          id: '1',
          description: description,
          checked: true,
        }, 
        {
          label: 'Option 1',
          id: '2',
          description: description,
        },
     ];
    });


    [...document.querySelectorAll('[class^="test-type-pill"] chi-picker')].forEach(el => {
      el.options = [{label: 'Radio1',}, {label: 'Radio2'},];
    });

    document.querySelector('.test-with-error-message chi-picker').options = [
      {label: 'Option 1',}, {label: 'Option 2'},
    ];

    [...document.querySelectorAll('[class^="test-with-description-no-input-"] chi-picker')].forEach(el => {
      el.options = [
        {
          label: 'Checkbox1',
          description: description,
          checked: true,
        }, 
        {
          label: 'Checkbox2',
          description: description,
        },
      ];
    });
  });
