---
title: HTML Selects
---

each size in ['default', 'sm', 'small', 'md', 'lg', 'large', 'xl']
  div(
    class=`test-${size}`
    class={
      '-lh--2': size == 'small'
    }
  )
    span.a-h2= `HTML Select / ${size}`
    table(cellpadding="0", cellspacing="0", width="600px")
      each state in ['initial', 'hover', 'active', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                select(
                  class='a-input'
                  class={
                    [`-${style}`]: style != 'default',
                    [`-${size}`]: size != 'default',
                    [`-${state}`]: state != 'initial' && state != 'disabled'
                  }
                  disabled=state=='disabled' ? 'disabled' : false
                )
                  option Select
                  option An option
                  option Another option
    span.a-h2= `HTML Select / ${size} / Pill`
    table(cellpadding="0", cellspacing="0", width="600px")
      tr
        td
          small= 'pill'
        each style in ['default', 'danger']
          td
            .-m--1
              select(
                class='a-input -pill'
                class={
                 [`-${style}`]: style != 'default',
                 [`-${size}`]: size != 'default',
                 [`-${state}`]: state != 'initial' && state != 'disabled'
                }
                disabled=state == 'disabled' ? 'disabled' : false
              )
                option Select
                option An option
                option Another option
