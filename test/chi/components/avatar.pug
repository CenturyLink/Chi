---
title: Avatar
---
- var types = ['img', 'icon', 'icon-web-font', 'letter', 'double-letter'];
- var colors = ["default", "grey", "red", "pink", "purple", "indigo", "navy", "blue", "cyan", "teal", "green", "yellow", "orange", "light", "secondary", "primary", "inverse"];
- var sizes = ['default', 'xs', 'sm', 'sm--2', 'sm--3', 'md', 'lg', 'xl', 'xxl'];
- var transparents = [false, true];

each type in types
  div(class=`test-${type}`)
    span.-text--h2= `Avatar / ${type}`
    table(cellpadding="0", cellspacing="0")
      thead
        tr
          th
          each size in sizes
            th.-p--1.-text--center=size
      tbody
        each color in colors
          each transparent in transparents
            if !transparent || (color!=='default' && color!=='light' && color!=='inverse' && (type==='icon' || type==='icon-web-font' || type==='letter' || type==='double-letter'))
              tr(class={'-bg--black': color==='light' || color==='inverse'})
                td(class={'-text--white': color==='light' || color==='inverse'})=color + (transparent ? ' trans bg' : '')
                each size in sizes
                  td.-p--1
                    if type === 'img'
                      div(
                        class={
                          "chi-avatar": true,
                          [`-${color}`]: type !== 'default',
                          [`-${size}`]: style !== 'default',
                          [`-transparent`]: transparent
                        }
                      )
                        img(src='../../assets/images/avatar.jpg', alt="avatar")
                    else if type === 'icon'
                      div(
                        class={
                          "chi-avatar chi-icon": true,
                          [`-${color}`]: type !== 'default',
                          [`-${size}`]: style !== 'default',
                          [`-transparent`]: transparent
                        }
                      )
                        svg
                          use(xlink:href=`#icon-user`)
                    else if type === 'icon-web-font'
                      div(
                        class={
                          "chi-avatar": true,
                          [`-${color}`]: type !== 'default',
                          [`-${size}`]: style !== 'default',
                          [`-transparent`]: transparent
                        }
                      )
                        i(class="chi-icon icon-user" aria-hidden='true')
                    else if type === 'letter'
                      div(
                        class={
                          "chi-avatar": true,
                          [`-${color}`]: type !== 'default',
                          [`-${size}`]: style !== 'default',
                          [`-transparent`]: transparent
                        }
                      ) M

                    else if type === 'double-letter'
                      div(
                        class={
                          "chi-avatar": true,
                          [`-${color}`]: type !== 'default',
                          [`-${size}`]: style !== 'default',
                          [`-transparent`]: transparent
                        }
                      ) AA
