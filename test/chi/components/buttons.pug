---
title: Buttons
---

each size in ['default', 'sm', 'small', 'md', 'lg', 'large', 'xl']
  each type in ['solid', 'outline', 'flat']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.a-h2= `Button / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        each state in ['initial', 'hover', 'active', 'focus', 'disabled']
          tr
            td
              small= `${state}`
            each style in ['default', 'primary', 'secondary', 'danger', 'dark']
              td
                input.a-btn.-m--1.-ml--2(
                  type="button"
                  class={
                    [`-${type}`]: type != 'solid',
                    [`-${style}`]: style != 'default',
                    [`-${state}`]: state != 'initial',
                    [`-${size}`]: size != 'default'
                  }
                  value="Button"
                  disabled=state=='disabled' ? 'disabled' : false
                )
                a.a-btn.-icon.-m--1(
                  href="#"
                  class={
                    [`-${type}`]: type != 'solid',
                    [`-${style}`]: style != 'default',
                    [`-${state}`]: state != 'initial',
                    [`-${size}`]: size != 'default'
                  }
                  disabled=state=='disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='#icon-atom')
                button.a-btn.-m--1(
                  class={
                    [`-${type}`]: type != 'solid',
                    [`-${style}`]: style != 'default',
                    [`-${state}`]: state != 'initial',
                    [`-${size}`]: size != 'default'
                  }
                  disabled=state=='disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='#icon-atom')
                    span Button
                button.a-btn.-pill.-m--1.-ml--2(
                class={
                  [`-${type}`]: type != 'solid',
                  [`-${style}`]: style != 'default',
                  [`-${state}`]: state != 'initial',
                  [`-${size}`]: size != 'default'
                }
                disabled=state == 'disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    span Button
                button.a-btn.-icon.-pill.-m--1(
                class={
                  [`-${type}`]: type != 'solid',
                  [`-${style}`]: style != 'default',
                  [`-${state}`]: state != 'initial',
                  [`-${size}`]: size != 'default'
                }
                disabled=state == 'disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='#icon-atom')
                button.a-btn.-pill.-m--1(
                class={
                  [`-${type}`]: type != 'solid',
                  [`-${style}`]: style != 'default',
                  [`-${state}`]: state != 'initial',
                  [`-${size}`]: size != 'default'
                }
                disabled=state == 'disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='#icon-atom')
                    span Button

  if size == 'default'
    .test-float
      h2 Button / floating
      table(cellpadding="0", cellspacing="0")
        each state in ['initial', 'hover', 'active', 'focus', 'disabled']
          tr
            td
              small= `${state}`
            each style in ['default', 'primary', 'secondary', 'danger', 'dark']
              td
                button(type="button", class=`a-btn -float -${style} -${state} -ml--4 -m--1`)
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='#icon-atom')

each size in ['default', 'sm', 'small', 'md', 'lg', 'large', 'xl']
  div(class={
    [`test-${type}`]: size == 'default',
    [`test-${type}-${size}`]: size != 'default'
  })
    span.a-h2= `Button Close Icon / ${size}`
    table(cellpadding="0", cellspacing="0")
      tr
        td
          button(class=`a-btn -icon -close -${size}`)
            .a-btn__content
              i.a-icon.icon-x
