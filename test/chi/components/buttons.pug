---
title: Buttons
---

each size in ['default', 'small', 'large']
  each type in ['solid', 'outline', 'flat']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.a-h2= `Button / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        each state in ['initial', 'hover', 'active', 'focus', 'disabled']
          tr
            td
              small= `${state}`
            each style in ['default', 'brand', 'danger', 'info', 'dark']
              td
                input.a-btn.-m1.-ml2(
                  type="button"
                  class={
                    [`-${type}`]: type != 'solid',
                    [`-${style}`]: style != 'default',
                    [`-${state}`]: state != 'initial',
                    [`-${size}`]: size != 'default'
                  }
                  value="Button"
                  disabled=state=='disabled' ? 'disabled' : false
                )
                a.a-btn.-icon.-m1(
                  href="#"
                  class={
                    [`-${type}`]: type != 'solid',
                    [`-${style}`]: style != 'default',
                    [`-${state}`]: state != 'initial',
                    [`-${size}`]: size != 'default'
                  }
                  disabled=state=='disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='../../sprite/chi-icons.svg#icon-atom')
                button.a-btn.-m1(
                  class={
                    [`-${type}`]: type != 'solid',
                    [`-${style}`]: style != 'default',
                    [`-${state}`]: state != 'initial',
                    [`-${size}`]: size != 'default'
                  }
                  disabled=state=='disabled' ? 'disabled' : false
                )
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='../../sprite/chi-icons.svg#icon-atom')
                    span Button

  if size == 'default'
    .test-float
      h2 Button / floating
      table(cellpadding="0", cellspacing="0")
        each state in ['initial', 'hover', 'active', 'focus', 'disabled']
          tr
            td
              small= `${state}`
            each style in ['default', 'brand', 'danger', 'info', 'dark']
              td
                button(type="button", class=`a-btn -float -${style} -${state} -ml4 -m1`)
                  .a-btn__content
                    .a-icon
                      svg
                        use(xlink:href='../../sprite/chi-icons.svg#icon-atom')
