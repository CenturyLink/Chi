---
title: Buttons
---

each size in ['default', 'sm', 'small', 'md', 'lg', 'large', 'xl']
  each type in ['solid', 'outline', 'flat', 'fluid']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.a-h2= `Button / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        each state in ['initial', 'hover', 'active', 'focus', 'disabled']
          tr
            td
              small= `${state}`
            each style in ['default', 'primary', 'secondary', 'danger', 'dark', 'light', 'inverse']
              if style === 'light' || style === 'inverse'
                td.-bg--black
                  .-mr--2
                    input.a-btn.-m--1.-mx--2(
                    type="button"
                    class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${state}`]: state != 'initial',
                      [`-${size}`]: size != 'default'
                    }
                    value="Button"
                    disabled=state == 'disabled' ? 'disabled' : false
                    )
                    a.a-btn.-icon.-m--1(
                    href="#"
                    class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${state}`]: state != 'initial',
                      [`-${size}`]: size != 'default'
                    }
                    disabled=state == 'disabled' ? 'disabled' : false
                    )
                      .a-btn__content
                        .a-icon
                          svg
                            use(xlink:href='#icon-atom')
