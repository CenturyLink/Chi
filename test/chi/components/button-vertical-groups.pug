---
title: Vertical button groups
---

each size in ['default', 'xs', 'sm', 'md', 'lg', 'xl']
  each type, index1 in ['solid', 'outline', 'flat']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.-text--h2= `Vertical button groups / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'primary', 'secondary', 'danger', 'dark', 'light']
            if (style === 'light')
              each val, index2 in [2,3,4]
                td(style="vertical-align:top").-bg--black
                  .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                    while val > 0
                      - val--
                      button.chi-button(class={
                          [`-${type}`]: type != 'solid',
                          [`-${style}`]: style != 'default',
                          [`-${size}`]: size != 'default'
                        },
                        aria-label='Button action') Button
            else
              each val, index2 in [2,3,4]
                td(style="vertical-align:top")
                  .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                    while val > 0
                      - val--
                      button.chi-button(class={
                          [`-${type}`]: type != 'solid',
                          [`-${style}`]: style != 'default',
                          [`-${size}`]: size != 'default'
                        },
                        aria-label='Button action') Button

      table(cellpadding="0", cellspacing="0")
        tr
