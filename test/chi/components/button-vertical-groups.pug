---
title: Vertical button groups
---

each size in ['default', 'small', 'large']
  each type, index1 in ['solid', 'outline', 'flat']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.a-h2= `Vertical button groups / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'brand', 'danger', 'info', 'dark']
            each val, index2 in [2,3,4]
              td(style="vertical-align:top")
                .m-btnGroup.-vertical.-m1(class={'-ml1': index1 != 0 && index2 != 0})
                  while val > 0
                    - val--
                    button.a-btn(class={
                        [`-${type}`]: type != 'solid',
                        [`-${style}`]: style != 'default',
                        [`-${size}`]: size != 'default'
                      }) Button

      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'brand', 'danger', 'info', 'dark']
            each val, index2 in [2,3,4]
              td(style="vertical-align:top")
                .m-btnGroup.-vertical.-m1(class={'-ml1': index1 != 0 && index2 != 0})
                  while val > 0
                    - val--
                    button.a-btn.-icon(class={
                        [`-${type}`]: type != 'solid',
                        [`-${style}`]: style != 'default',
                        [`-${size}`]: size != 'default'
                      })
                        .a-btn__content
                          .a-icon
                            svg
                              use(xlink:href='../../sprite/chi-icons.svg#icon-atom')

      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'brand', 'danger', 'info', 'dark']
            each val, index2 in [2,3,4]
              td(style="vertical-align:top")
                .m-btnGroup.-vertical.-m1(class={'-ml1': index1 != 0 && index2 != 0})
                  while val > 0
                    - val--
                    button.a-btn(class={
                        [`-${type}`]: type != 'solid',
                        [`-${style}`]: style != 'default',
                        [`-${size}`]: size != 'default'
                      })
                        .a-btn__content
                          .a-icon
                            svg
                              use(xlink:href='../../sprite/chi-icons.svg#icon-atom')
                          span Button

    div(class={
        [`test-${type}-fluid`]: size == 'default',
        [`test-${type}-${size}-fluid`]: size != 'default'
      })
        span.a-h2= `Vertical button groups / ${type} / ${size} / fluid`
        table(cellpadding="0", cellspacing="0")
          tr
            each style in ['default', 'brand', 'danger', 'info', 'dark']
              td(style="width:120px")
                .m-btnGroup.-vertical.-fluid.-m1
                  each modifier in ['alignLeft', '', 'alignRight']
                    button.a-btn(class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${modifier}`]: modifier != '',
                      [`-${size}`]: size != 'default'
                    }) Button

        table(cellpadding="0", cellspacing="0")
          tr
            each style in ['default', 'brand', 'danger', 'info', 'dark']
              td(style="width:70px")
                .m-btnGroup.-vertical.-fluid.-m1
                  each modifier in ['alignLeft', '', 'alignRight']
                    button.a-btn.-icon(class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${modifier}`]: modifier != '',
                      [`-${size}`]: size != 'default'
                    })
                      .a-btn__content
                        .a-icon
                          svg
                            use(xlink:href='../../sprite/chi-icons.svg#icon-atom')

        table(cellpadding="0", cellspacing="0")
          tr
            each style in ['default', 'brand', 'danger', 'info', 'dark']
              td(style="width:140px")
                .m-btnGroup.-vertical.-fluid.-m1
                  each modifier in ['alignLeft', '', 'alignRight']
                    button.a-btn(class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${modifier}`]: modifier != '',
                      [`-${size}`]: size != 'default'
                    })
                      .a-btn__content
                        .a-icon
                          svg
                            use(xlink:href='../../sprite/chi-icons.svg#icon-atom')
                        span Button
