---
title: Vertical button groups
---

each size in ['default', 'sm', 'md', 'lg', 'xl']
  each type, index1 in ['solid', 'outline', 'flat']
    div(class={
      [`test-${type}`]: size == 'default',
      [`test-${type}-${size}`]: size != 'default'
    })
      span.-text--h2= `Vertical button groups / ${type} / ${size}`
      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'primary', 'secondary', 'danger', 'dark']
            each val, index2 in [2,3,4]
              td(style="vertical-align:top")
                .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                  while val > 0
                    - val--
                    button.chi-button(class={
                        [`-${type}`]: type != 'solid',
                        [`-${style}`]: style != 'default',
                        [`-${size}`]: size != 'default'
                      },
                      aria-label='Button action') Button

      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'primary', 'secondary', 'danger', 'dark']
            each val, index2 in [2,3,4]
              td(style="vertical-align:top")
                .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                  while val > 0
                    - val--
                    button.chi-button.-icon(class={
                        [`-${type}`]: type != 'solid',
                        [`-${style}`]: style != 'default',
                        [`-${size}`]: size != 'default'
                      },
                      aria-label='Button action')
                        .chi-button__content
                          .chi-icon
                            svg
                              use(xlink:href='#icon-atom')

      table(cellpadding="0", cellspacing="0")
        tr
          each style in ['default', 'primary', 'secondary', 'danger', 'dark']
            each val, index2 in [2,3,4]
              td(style="vertical-align:top")
                .chi-button-group.-vertical.-m--1(class={'-ml--1': index1 != 0 && index2 != 0})
                  while val > 0
                    - val--
                    button.chi-button(class={
                        [`-${type}`]: type != 'solid',
                        [`-${style}`]: style != 'default',
                        [`-${size}`]: size != 'default'
                      },
                      aria-label='Button action')
                        .chi-button__content
                          .chi-icon
                            svg
                              use(xlink:href='#icon-atom')
                          span Button

    div(class={
        [`test-${type}-fluid`]: size == 'default',
        [`test-${type}-${size}-fluid`]: size != 'default'
      })
        span.-text--h2= `Vertical button groups / ${type} / ${size} / fluid`
        table(cellpadding="0", cellspacing="0")
          tr
            each style in ['default', 'primary', 'secondary', 'danger', 'dark']
              td(style="width:120px")
                .chi-button-group.-vertical.-fluid.-m--1
                  each modifier in ['align--left', '', 'align--right']
                    button.chi-button(class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${modifier}`]: modifier != '',
                      [`-${size}`]: size != 'default'
                    },
                      aria-label='Button action') Button

        table(cellpadding="0", cellspacing="0")
          tr
            each style in ['default', 'primary', 'secondary', 'danger', 'dark']
              td(style="width:70px")
                .chi-button-group.-vertical.-fluid.-m--1
                  each modifier in ['align--left', '', 'align--right']
                    button.chi-button.-icon(class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${modifier}`]: modifier != '',
                      [`-${size}`]: size != 'default'
                    },
                      aria-label='Button action')
                      .chi-button__content
                        .chi-icon
                          svg
                            use(xlink:href='#icon-atom')

        table(cellpadding="0", cellspacing="0")
          tr
            each style in ['default', 'primary', 'secondary', 'danger', 'dark']
              td(style="width:140px")
                .chi-button-group.-vertical.-fluid.-m--1
                  each modifier in ['align--left', '', 'align--right']
                    button.chi-button(class={
                      [`-${type}`]: type != 'solid',
                      [`-${style}`]: style != 'default',
                      [`-${modifier}`]: modifier != '',
                      [`-${size}`]: size != 'default'
                    },
                      aria-label='Button action')
                      .chi-button__content
                        .chi-icon
                          svg
                            use(xlink:href='#icon-atom')
                        span Button
