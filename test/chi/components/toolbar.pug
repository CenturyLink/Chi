h3 Toolbar
.test-toolbar-base.-w--100
  .chi-toolbar
    .chi-toolbar__header
      .chi-toolbar__start
        .chi-toolbar__search
          .chi-form__item
            chi-search-input(id="example__base")
        .chi-toolbar__views 
          .chi-toolbar__views-desktop 
            .chi-form__item
              select(class="chi-select", id="example-views")
                option(value="") View
                option View 1
                option View 2
        .chi-toolbar__filters
          .chi-toolbar__filters-desktop
            .chi-form__item
              select(class="chi-select", id="example-ba1")
                option(value="") Select
                option Option 1
                option Option 2
                option Option 3
            .chi-form__item
              select(class="chi-select", id="example-ba2")
                option(value="") Select
                option Option 1
                option Option 2
                option Option 3
            button.chi-button.-icon.-flat(aria-label='Button action')
              .chi-button__content
