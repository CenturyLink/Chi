---
title: Flag Icons
---
- var sizes = ['sm', 'xs'];
- var icons = ['', 'ar', 'au', 'be', 'br', 'ca', 'cl', 'cn', 'co', 'ec', 'fr', 'de', 'hk', 'in', 'ie', 'it', 'jp', 'mx', 'nl', 'pe', 'sg', 'es', 'gb', 'us', 've'];

h2 Icons
.test-flag-icons
  .chi-grid.-no-gutter.-w--100
    .chi-col.-w--4.-pl--2.-bb--2.-p--1
      h4.-m--0.-p--0 Name
    .chi-col.-w--4.-bb--2.-p--1
      h4.-m--0.-p--0 Size / sm
    .chi-col.-w--4.-bb--2.-p--1
      h4.-m--0.-p--0 Size / xs
    each name in icons
      .chi-col.-w--4.-pl--2.-bb--1.-bg--white.-p--1
        if (name === '')
          h6.-text--normal.-m--0.-p--0
            em undefined
        else
          h6.-m--0.-p--0= 'icon-' + name
      each size in sizes
        .chi-col.-w--4.-bb--1.-bg--white.-p--1
          div.-d--flex.-align-items--center.-h--100
            i.chi-flag-icon(class=`icon-${name} -${size}`, aria-hidden="true")
