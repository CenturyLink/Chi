---
title: Spinner
---
h2 Backdrop

h3 Base
.test-backdrop-base(style="height:31rem;width:100%")
  .example.-mb--3(style="height:30rem;width:100%")
    .m-backdrop.-center.-p--6(style="position:relative;height:100%;")
      .m-backdrop__wrapper
        svg(class=`a-spinner -text--inverse`,viewBox=`0 0 66 66`)
          title Loading
          circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h3 Inverse Backdrop
.test-backdrop-inverse(style="height:31rem;width:100%")
  .example.-mb--3(style="height:30rem;width:100%")
    .m-backdrop.-center.-inverse.-p--6(style="position:relative;height:100%;")
      .m-backdrop__wrapper
        svg(class=`a-spinner -text--primary`,viewBox=`0 0 66 66`)
          title Loading
          circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h2 Contextual

h3 Spinner Buttons
.test-buttons
  .example.-mb--3
    .-p--3
      button(class='a-btn -mr--3')
        .a-btn__content
          span Button
          svg(class='a-spinner -text--muted', viewBox='0 0 66 66')
            title Loading
            circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      button(class='a-btn -sm -mr--3')
        .a-btn__content
          span Small
          svg(class='a-spinner -text--muted -xs', viewBox='0 0 66 66')
            title Loading
            circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      button(class='a-btn -lg -mr--3')
        .a-btn__content
          span Large
          svg(class='a-spinner -text--muted -sm--2',viewBox='0 0 66 66')
            title Loading
            circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h3 Spinner Text Input
.test-text-input
  .example.-mb--3
    .-p--3
      .m-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="a-input", placeholder="Placeholder", value="Sample Text")
        svg(class='a-spinner -text--muted',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      .m-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="a-input -sm", placeholder="Placeholder", value="Sample Text")
        svg(class='a-spinner -text--muted -xs',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      .m-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="a-input -lg", placeholder="Placeholder", value="Sample Text")
        svg(class='a-spinner -text--muted -sm--2',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h2 Sizes
.test-sizes
  .a-grid
    each size in ['xs', 'sm', 'sm--2', 'sm--3', 'md', 'lg', 'xl', 'xxl']
      .a-col.-w--1.-o--1.-middle
        h4= '-'+ size
      .a-col.-w--2.-middle
        svg(class=`a-spinner -text--muted -${size}`,viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h2 Colors
.test-colors
  .a-grid.-align-items--center
    each type in ['text--primary', 'text--success', 'text--warning', 'text--danger', 'text--muted', 'text--secondary', 'text--light']
      div.-p--2
        svg(class=`a-spinner -${type} -lg`,viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
        p.-text(class=`-${type}`)
          = `-${type}`

style.
  svg {
    animation: none !important;
  }
  .path {
    animation: none !important;
    stroke-dasharray: 0, 0 !important;
  }
