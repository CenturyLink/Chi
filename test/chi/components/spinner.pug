---
title: Spinner
---
h3 Backdrop

h4 Base
.test-backdrop-base(style="height:31rem;width:100%")
  .example.-mb--3(style="height:30rem;width:100%")
    .chi-backdrop.-center.-p--6(style="position:relative;height:100%;")
      .chi-backdrop__wrapper
        svg(class=`chi-spinner -icon--light`,viewBox=`0 0 66 66`)
          title Loading
          circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h4 Inverse Backdrop
.test-backdrop-inverse(style="height:31rem;width:100%")
  .example.-mb--3(style="height:30rem;width:100%")
    .chi-backdrop.-center.-inverse.-p--6(style="position:relative;height:100%;")
      .chi-backdrop__wrapper
        svg(class=`chi-spinner -icon--primary`,viewBox=`0 0 66 66`)
          title Loading
          circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)

h3 Contextual

h4 Spinner Buttons
.test-buttons
  .example.-mb--3
    .-p--3
      button(class='chi-button -mr--3')
        .chi-button__content
          span Button
          svg(class='chi-spinner -icon--muted', viewBox='0 0 66 66')
            title Loading
            circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      button(class='chi-button -sm -mr--3')
        .chi-button__content
          span Small
          svg(class='chi-spinner -icon--muted -xs', viewBox='0 0 66 66')
            title Loading
            circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      button(class='chi-button -lg -mr--3')
        .chi-button__content
          span Large
          svg(class='chi-spinner -icon--muted -sm--2',viewBox='0 0 66 66')
            title Loading
            circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h4 Spinner Text Input
.test-text-input
  .example.-mb--3
    .-p--3
      .chi-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="chi-input", placeholder="Placeholder", value="Sample Text")
        svg(class='chi-spinner -icon--muted',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      .chi-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="chi-input -sm", placeholder="Placeholder", value="Sample Text")
        svg(class='chi-spinner -icon--muted -xs',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
      .chi-input__wrapper.-pb--2(style="max-width:20rem")
        input(type="text", class="chi-input -lg", placeholder="Placeholder", value="Sample Text")
        svg(class='chi-spinner -icon--muted -sm--2',viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h4 Sizes
.test-sizes
  .chi-grid
    each size in ['xs', 'sm', 'sm--2', 'sm--3', 'md', 'lg', 'xl', 'xxl']
      .chi-col.-w--1.-o--1.-middle
        h4= '-'+ size
      .chi-col.-w--2.-middle
        svg(class=`chi-spinner -icon--muted -${size}`,viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')

h4 Colors
.test-colors
  .chi-grid.-align-items--center
    each type in ['icon--primary', 'icon--success', 'icon--warning', 'icon--danger', 'icon--muted', 'icon--secondary', 'icon--light']
      div.-p--2
        svg(class=`chi-spinner -${type} -lg`,viewBox='0 0 66 66')
          title Loading
          circle(class='path',cx='33',cy='33',r='30',fill='none',stroke-width='6')
        p.-text(class=`-${type}`)
          = `-${type}`

h3 Spinner alert
each size in ['default', 'sm', 'lg']
  h4 Spinner banner / #{size}
  div(class=`test-banner-spinner-${size} -w--100`)
    each type in ['base', 'success', 'danger', 'warning', 'info', 'muted']
      .chi-alert.-m--2.-banner(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        .chi-alert__spinner
          svg(class=`chi-spinner ${size === 'lg' ? '-sm--2' : ''}` viewBox="0 0 66 66")
            title Loading
            circle(class="path" cx="33" cy="33" r="30" fill="none" stroke-width="6")
        .chi-alert__content
          p.chi-alert__text=`This is ${type === 'info' ? 'an' : 'a'} ${type} alert`

  h4 Spinner bubble / #{size}
  div(class=`test-bubble-spinner-${size} -w--100`)
    each type in ['base', 'success', 'danger', 'warning', 'info', 'muted']
        .chi-alert.-m--2(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
          .chi-alert__spinner
            svg(class=`chi-spinner ${size === 'lg' ? '-sm--2' : ''}` viewBox="0 0 66 66")
              title Loading
              circle(class="path" cx="33" cy="33" r="30" fill="none" stroke-width="6")
          .chi-alert__content
            p.chi-alert__text=`This is ${type === 'info' ? 'an' : 'a'} ${type} alert`

  h4 Spinner toast / #{size}
  div(class=`test-toast-spinner-${size}`)
    each type in ['base', 'success', 'danger', 'warning', 'info', 'muted']
      .chi-alert.-toast.-m--2(class=`-${type} ${size === 'default' ? '' : '-' + size}`)
        .chi-alert__spinner
          svg(class=`chi-spinner ${size === 'lg' ? '-sm--2' : ''}` viewBox="0 0 66 66")
              title Loading
              circle(class="path" cx="33" cy="33" r="30" fill="none" stroke-width="6")
        .chi-alert__content
            p.chi-alert__text=`This is ${type === 'info' ? 'an' : 'a'} ${type} alert`
        button(class='chi-alert__close-button chi-button -icon -close', aria-label='Close')
          .chi-button__content
            .chi-icon
              svg
                use(xlink:href='#icon-x')
                
style.
  svg {
    animation: none !important;
  }
  .path {
    animation: none !important;
    stroke-dasharray: 0, 0 !important;
  }
