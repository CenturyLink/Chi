- var sizes = ['sm', 'md', 'lg'];

h2 Base

h3 Type checkbox
h4 Base
.test-base
  .example(style='width: 700px')
    .-p--3
      each type in ['Checkbox1','Checkbox2']
        .m-picker
          input(type="checkbox", class="a-picker", id=`i-${type}`)
          label(for=`i-${type}`)
            = type

h4 Base checked
.test-base-checked
  .example(style='width: 700px')
    .-p--3
      each type in ['Checkbox1','Checkbox2']
        .m-picker
          if type == 'Checkbox1'
            input(type="checkbox", class="a-picker", id=`i-checked-${type}`, checked)
          else
            input(type="checkbox", class="a-picker", id=`i-checked-${type}`)
          label(for=`i-checked-${type}`)
            = type

