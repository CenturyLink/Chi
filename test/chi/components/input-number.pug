---
title: Input numbers
---
- var styles = ['', 'success', 'warning', 'danger']
- var states =  ['initial', 'hover', 'focus', 'disabled']
- var sizes = ['default', 'xs', 'sm', 'md', 'lg', 'xl']

each size in sizes
  div(class=`test-${size}`)
    span.-text--h2= `Number Input / ${size}`
    table(cellpadding='0', cellspacing='0', width='1000px')
        tr
          th.-text--left
            small='↓ State / style →'
          each style in styles
            th.-text--left.-pl--1= `${style}`
        each state in ['initial', 'hover', 'focus', 'disabled']
          tr
            td
              small= `${state}`
            each style in styles
              td
                .-m--1
                  .chi-form__item.-row
                    .chi-number-input(class={[`-${size}`]: size != 'default'})
                      input.chi-input(
                        type='number'
                        class={
                          [`-${style}`]: style != '',
                          [`-${state}`]: state != 'disabled'
                        }
                        disabled=state=='disabled'?'disabled': false
                      )
                      button(tabindex='-1', aria-label='Decrease')
                      button(tabindex='-1', aria-label='Increase')

each size in sizes
  div(class=`test-base-helper-message-${size}`)
    span.-text--h2= `Number Input ${size} with helper message`
    each state in states
      span.-text--h3.-mt--3= `${state}`
      each style in styles 
        span.-text-h4=style 
        .chi-input__wrapper
          .chi-number-input(class={[`-${size}`]: size != 'default'})
            input.chi-input(
              type='number'
              class={
                [`-${style}`]: style != '',
                [`-${state}`]: state != 'disabled'
              }
              disabled=state=='disabled'?'disabled': false
            )
            button(tabindex='-1', aria-label='Decrease')
            button(tabindex='-1', aria-label='Increase')
          .-d--flex
            div(class={
              "chi-label": true,
              "-status": true,
              [`-${style}`]: style != ''
            })
              .chi-icon(class={
                  "-d--none": style == '',
                }
              )
                svg(aria-hidden="true")
                  use(xlink:href=`${
                    style === 'warning' ? '#icon-warning' :
                      style === 'danger' ? '#icon-circle-warning' :
                        style === 'success' ? '#icon-circle-check' : ''
                  }`)
              .-p--0.-m--0 An optional message

