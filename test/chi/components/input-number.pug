---
title: Input numbers
---

each size in ['default', 'xs', 'sm', 'md', 'lg', 'xl']
  div(class=`test-${size}`)
    span.-text--h2= `Text Input / ${size}`
    table(cellpadding='0', cellspacing='0', width='600px')
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                .chi-form__item.-row
                  .chi-number-input(class={[`-${size}`]: size != 'default'})
                    input.chi-input(
                      type='number'
                      class={
                        [`-${style}`]: style != 'default',
                        [`-${state}`]: state != 'disabled'
                      }
                      disabled=state=='disabled'?'disabled': false
                    )
                    button(tabindex='-1', aria-label='Decrease')
                    button(tabindex='-1', aria-label='Increase')

each size in ['default', 'xs', 'sm', 'md', 'lg', 'xl']
  div(class=`test-expanded-${size}`)
    span.-text--h2= `Text Input Expanded / ${size}`
    table(cellpadding='0', cellspacing='0', width='600px')
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                .chi-form__item.-row
                  .chi-number-input.-expanded(class={[`-${size}`]: size != 'default'})
                    input.chi-input(
                      type='number'
                      class={
                        [`-${style}`]: style != 'default',
                        [`-${state}`]: state != 'disabled'
                      }
                      disabled=state=='disabled'?'disabled': false
                    )
                    button.chi-button.-icon(tabindex='-1', aria-label='Decrease')
                      .chi-button__content
                        i.chi-icon.icon-minus(aria-hidden="true")
                    button.chi-button.-icon(tabindex='-1', aria-label='Increase')
                      .chi-button__content
                        i.chi-icon.icon-plus(aria-hidden="true")

each size in ['default', 'xs', 'sm', 'md', 'lg', 'xl']
  div(class=`test-expanded-svg-${size}`)
    span.-text--h2= `Text Input Expanded SVG / ${size}`
    table(cellpadding='0', cellspacing='0', width='600px')
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'danger']
            td
              .-m--1
                .chi-form__item.-row
                  .chi-number-input.-expanded(class={[`-${size}`]: size != 'default'})
                    input.chi-input(
                      type='number'
                      class={
                        [`-${style}`]: style != 'default',
                        [`-${state}`]: state != 'disabled'
                      }
                      disabled=state=='disabled'?'disabled': false
                    )
                    button.chi-button.-icon(tabindex='-1', aria-label='Decrease')
                      .chi-button__content
                        .chi-icon
                          svg(aria-hidden="true")
                            use(xlink:href='#icon-minus')
                    button.chi-button.-icon(tabindex='-1', aria-label='Increase')
                      .chi-button__content
                        .chi-icon
                          svg(aria-hidden="true")
                            use(xlink:href='#icon-plus')
