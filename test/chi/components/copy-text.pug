---
title: Copy Text
---
script(type='module' src='../../js/ce/ux-chi-ce/ux-chi-ce.esm.js')

- const sizes = ['xs', 'sm', 'sm--2', 'sm--3', 'md', 'lg', 'xl', 'xxl'];

h3 Base
.test-copy-text-base
  .-p--2
    span This is an example text
    button(class="chi-button -icon -flat -primary" aria-label="Edit")
      .chi-button__content
        i(class="chi-icon icon-copy" aria-hidden="true")

h3 Disabled
.test-copy-text-disabled
  .-p--2
    span This is an example text
    button(class="chi-button -icon -flat -primary" aria-label="Edit" disabled)
      .chi-button__content
        i(class="chi-icon icon-copy" aria-hidden="true")

h3 Sizes
.test-copy-text-sizes
  .-d--flex.-align-items--end
    each size in sizes
      .-m--1
        button(class="chi-button -icon -flat -primary" aria-label="Edit")
          .chi-button__content
            i(class=`chi-icon icon-copy -${size}` aria-hidden="true")
        p.-text.-text--center #{size}