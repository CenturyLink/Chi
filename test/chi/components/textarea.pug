                      svg
                        use(xlink:href='#icon-check')
                  else if style == 'warning'
                    .chi-icon.-icon--warning
                      svg
                        use(xlink:href='#icon-warning')
                  else if style == 'danger'
                    .chi-icon.-icon--danger
                      svg
                        use(xlink:href='#icon-circle-warning')
                  else
                    .chi-icon
