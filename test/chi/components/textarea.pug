---
title: Textarea
---

mixin icon(name, size)
  .chi-icon(class={
    [`-${size}`]: size
  })
    svg
      if name == 'success'
        use(xlink:href='#icon-check')
      else if name == 'warning'
        use(xlink:href='#icon-warning')
      else if name == 'danger'
        use(xlink:href='#icon-circle-warning')
      else if name == 'default'
        use(xlink:href='#icon-circle-info-outline')
      else
        use(xlink:href=`#icon-${name}`)

each size in ['default', 'xs', 'sm', 'md', 'lg', 'xl']
  div(class=`test-${size}`)
    span.-text--h2= `Textarea / ${size}`
    table(cellpadding="0", cellspacing="0", width="1200px")
      each state in ['initial', 'hover', 'focus', 'disabled']
        tr
          td
            small= `${state}`
          each style in ['default', 'success', 'warning', 'danger']
            td(style='vertical-align: bottom')
              .-m--1
                if state == 'disabled'
                  textarea(class=`chi-input -${style} -${state} -${size}`, disabled) Value
                else
                  textarea(class=`chi-input -${style} -${state} -${size}`) Value
            td(style='vertical-align: bottom')
              .-m--1
                if state == 'disabled'
                  .chi-form__item
                    label.chi-label(class=`-${size}` for='example') Label
                    textarea(class=`chi-input -${style} -${state} -${size}`, disabled) Value
                else
                  .chi-form__item
                    label.chi-label(class=`-${size}` for='example') Label
                    textarea(class=`chi-input -${style} -${state} -${size}`) Value

  div(class=`test-${size}-icon-left`)
