              .-sr--only Label
        .chi-data-table__cell.-expandable
          button.chi-button.-icon.-flat.-xs.-expand(aria-label='Expand row')
            .chi-button__content
              i.chi-icon.icon-chevron-right(aria-hidden='true')
        .chi-data-table__cell(data-label='Name').-flex-basis--15.-key
          div Name 1
        .chi-data-table__cell(data-label='ID').-flex-basis--5
          .chi-badge.-primary
