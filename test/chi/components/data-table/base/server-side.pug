          .-position--absolute.resize-handle(style="top: 0px; right: 0px; bottom: 0px; width: 1rem; cursor: col-resize;")
        .chi-data-table__cell.-justify-content-md--start.-flex-basis--15.-position--relative
          div Name
        .chi-data-table__cell.-justify-content-md--start.-flex-basis--5.-position--relative
          div ID
          i.chi-icon.-xs.icon-arrow-sort(aria-hidden='true')
        .chi-data-table__cell.-justify-content-md--start.-flex-basis--10.-position--relative
          div Last Login
