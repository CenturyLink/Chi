    .chi-data-table__footer
      nav.chi-pagination(role='navigation' aria-label='Pagination')
        .chi-pagination__content
          .chi-pagination__start
            .chi-pagination__results.-text--md
              span.chi-pagination__label 3 results
            .chi-pagination__page-size.-text--md
              select.chi-input
                option(value="20") 20
                option(value="40") 40
                option(value="60") 60
                option(value="80") 20
                option(value="all") All
              span.chi-pagination__label per page
          .chi-pagination__center
            .chi-button-group
              button.chi-button.-icon.-flat.-md(aria-label='First page' disabled)
                .chi-button__content
                  i.chi-icon.icon-page-first
              button.chi-button.-icon.-flat.-md(aria-label='Previous page' disabled)
                .chi-button__content
                  i.chi-icon.icon-chevron-left(aria-hidden='true')
              button.chi-button.-flat.-active.-md(aria-label='Page 1') 1
              button.chi-button.-flat(aria-label='Page 2') 2
              button.chi-button.-icon.-flat(aria-label='Next page')
                .chi-button__content
                  i.chi-icon.icon-chevron-right(aria-hidden='true')
              button.chi-button.-icon.-flat.-md(aria-label='First page')
                .chi-button__content
                  i.chi-icon.icon-page-last
          .chi-pagination__end
            .chi-pagination__jumper.-text--md
              label.chi-pagination__label(for='jumper-input-1') Go to page:
              input#jumper-input-1.chi-input.-md(type='text')
