      .chi-data-table__row
        .chi-data-table__cell.-selectable.-position--relative
          .chi-checkbox
            input#checkbox-ba1.chi-checkbox__input(type='checkbox')
            label.chi-checkbox__label(for='checkbox-ba1')
              .-sr--only Label
          .-position--absolute.resize-handle(style="top: 0px; right: 0px; bottom: 0px; width: 1rem; cursor: col-resize;")
