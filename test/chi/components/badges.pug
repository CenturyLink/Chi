---
title: Badges

---
each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.-text--h2= `Badge / ${type}`
    div.-d--flex.-flex--wrap(style="gap: 1rem;")
      each style in ['base', 'primary', 'secondary', 'success', 'warning', 'danger', 'dark', 'muted', 'light', 'accent-1', 'accent-2', 'accent-3', 'accent-4', 'accent-5']
        div(
        class="chi-badge -mr--1"
        class={
          [`-${type}`]: type !== 'solid',
          [`-${style}`]: style !== 'base'
        }
        )
          span= style
        div(
        class="chi-badge -mr--1"
        class={
          [`-${type}`]: type !== 'solid',
          [`-${style}`]: style !== 'base'
        }
        )
          .chi-badge__content
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
            span= style

h2 Badge Icons
.test-badge-icons
  .example.-mb--1
    each size in ['xs', 'sm', 'default']
      .p.-text--bold= size
        .chi-badge(class=`-${size} -m--1`)
          .chi-badge__content
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
        .chi-badge(class=`-${size} -m--1`)
          .chi-badge__content
            span Badge
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
        .chi-badge(class=`-${size} -m--1`)
          .chi-badge__content
            .chi-icon
              svg
                use(xlink:href='#icon-atom')
            span Badge
            .chi-icon
              svg
                use(xlink:href='#icon-atom')

h2 Text Transform
.test-text-transform
  .example.-mb--1
    .p.-text--bold
      | uppercase
      .chi-badge.-text--uppercase.-m--1
        span Badge
    .p.-text--bold
      | lowercase
      .chi-badge.-text--lowercase.-m--1
        span Badge
    .p.-text--bold
      | capitalized
      .chi-badge.-text--capitalized.-m--1
        span Badge

h2 Text Weight
.test-text-weight
  .example.-mb--1
    .p.-text--bold
      | normal
      .chi-badge.-text--normal.-m--1
        span Badge
    .p.-text--bold
      | semi-bold
      .chi-badge.-text--semi-bold.-m--1
        span Badge
    .p.-text--bold
      | bold
      .chi-badge.-text--bold.-m--1
        span Badge