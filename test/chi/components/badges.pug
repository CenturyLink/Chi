---
title: Badges
---

each type in ['solid', 'outline', 'flat']
  div(class=`test-${type}`)
    span.a-h2= `Badge / ${type}`
    div
      each style in ['base', 'brand', 'success', 'danger', 'info', 'dark', 'light']
        div(
        class="a-badge -mr1"
        class={
          [`-${type}`]: type != 'solid',
          [`-${style}`]: style != 'base'
        }
        )
          span= style
        div(
        class="a-badge -mr1"
        class={
          [`-${type}`]: type != 'solid',
          [`-${style}`]: style != 'base'
        }
        )
          .a-badge__content
            .a-icon
              svg
                use(xlink:href='#icon-atom')
            span= style

each type in ['solid', 'outline']
  div(class=`test-pill-${type}`)
    span.a-h2= `Badge / Pill / ${type}`
    table(cellpadding="0", cellspacing="0")
      tr
        each style in ['base', 'brand', 'success', 'danger', 'info', 'dark', 'light']
