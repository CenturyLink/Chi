---
title: Drawer
---
- var sides = ['top', 'right', 'bottom', 'left'];
- var versions = [{"title": "no-backdrop", "classes": "", "testClass": "test-"}, {"title": "backdrop", "classes": "chi-backdrop", "testClass": "test-backdrop-"}, {"title": "inverse backdrop", "classes": "chi-backdrop -inverse", "testClass": "test-backdrop-inverse-"} ];

each side in sides
  each version in versions

    div(class=`${version.testClass}${side} -mb--3`)
      div(style='width: 320px')
        .-text--h2= `Drawer / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          .chi-backdrop__wrapper
            div(class=`chi-drawer -${side} -active -position--absolute`)
              button(class='chi-button -icon -close', aria-label='Close')
                .chi-button__content
                  i.chi-icon.icon-x(aria-hidden="true")
              .chi-drawer__content
                .-px--2.-text Drawer content here

    div(class=`${version.testClass}${side}-headed -mb--3`)
      div(style='width: 320px')
        .-text--h2= `Drawer / with head / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          .chi-backdrop__wrapper
            div(class=`chi-drawer -${side} -active -position--absolute`)
              .chi-drawer__header
                button(class='chi-button -icon -close', aria-label='Close')
                  .chi-button__content
                    i.chi-icon.icon-x(aria-hidden="true")
              .chi-drawer__content
                .-px--2.-text Drawer content here

    div(class=`${version.testClass}${side}-with-title -mb--3`)
      div(style='width: 320px')
        .-text--h2= `Drawer / with title / ${version.title} / ${side}`
        div(class=`${version.classes}` style="position:relative;height:20rem")
          .chi-backdrop__wrapper
            div(class=`chi-drawer -${side} -active -position--absolute`)
              .chi-drawer__header
                span.chi-drawer__title Drawer title here
                button(class='chi-button -icon -close', aria-label='Close')
                  .chi-button__content
                    i.chi-icon.icon-x(aria-hidden="true")
              .chi-drawer__content
                .-px--2.-text Drawer content here

div(class=`test-non-closable -mb--3 example -mb--3`)
  div(style='width: 320px')
    .-text--h2= `Drawer / Non closable`
    div(style="position:relative;height:20rem")
      div(class=`chi-drawer -left -active -position--absolute`)
        .chi-drawer__content
          .-px--2.-text Drawer content here
