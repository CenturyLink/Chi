h2 Horizontal
h3 Flat
.test-horizontal-flat
  each style in ['base', 'border']
    each size in ['xs', 'sm', 'md', 'lg']
      h4= `Tabs ${size} ${style}`
      ul.chi-tabs(class=`-${style} -${size}`)
        li.-active
          a(href='#') Active tab
        li
          a(href='#') Tab link
        li
          a(href='#') Tab link

