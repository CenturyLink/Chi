title: Date picker
scripts:
  - js/chi
  - js/ce/ux-chi-ce
---
-  let day = 1;
-  const weekS = ['S', 'M', 'T', 'W', 'T', 'F', 'S'];
-  const today = 19;
-  const active = 23;

.test-base
  span.a-h2 Base
  .-position--relative
    .m-datepicker.-week-starts-on-sun.-month-starts-on-thu
      .m-datepicker__month-row
        .prev
          .a-icon.-sm.-text--brand
            svg
              use(xlink:href='#icon-chevron-left')
        .m-datepicker__month
          | November 2018
        .next
          .a-icon.-sm.-text--brand
            svg
              use(xlink:href='#icon-chevron-right')
      .m-datepicker__day-names
        each weekDay in weekS
          .m-datepicker__week-day=weekDay
      .m-datepicker__days
        while day < 31
          .m-datepicker__day=day++

- day = 1;

.test-today
  span.a-h2 Today
  .-position--relative
    .m-datepicker.-week-starts-on-sun.-month-starts-on-thu
      .m-datepicker__month-row
        .prev
          .a-icon.-sm.-text--brand
            svg
              use(xlink:href='#icon-chevron-left')
        .m-datepicker__month
          | November 2018
        .next
          .a-icon.-sm.-text--brand
            svg
              use(xlink:href='#icon-chevron-right')
      .m-datepicker__day-names
        each weekDay in weekS
          .m-datepicker__week-day=weekDay
      .m-datepicker__days
        while day < 31
          if day === today
            .m-datepicker__day.-today=day++
          else
            .m-datepicker__day=day++

- day = 1;

