div(class=`test-dropdown-radio`)
  span.a-h2 radio
  .m-dropdown__menu.-active
    each inputState in inputStates
      .m-dropdown__menu-item
        input(type="radio", class="a-input", checked=(inputState==="checked"), disabled=(inputState==="disabled"))
        label(for=`radio${inputState}`)
        label.-text(for=`radio${inputState}`)="Element radio " + inputState

div(class=`test-dropdown-radio-icon`)
  span.a-h2 radio with icons
  .m-dropdown__menu.-active
    each inputState in inputStates
      .m-dropdown__menu-item
        input(type="radio", class="a-input", checked=(inputState==="checked"), disabled=(inputState==="disabled"))
        label(for=`radio${inputState}`)
        label.-text(for=`radio${inputState}`)
          .a-icon
            svg
              use(xlink:href='#icon-logo-centurylink')
          ="Element radio " + inputState

div(class=`test-dropdown-text`)
  span.a-h2 Plain text
  .-d--flex
    .m-dropdown__menu.-active
      span.m-dropdown__menu-item Text 1
      span.m-dropdown__menu-item Text 2
      span.m-dropdown__menu-item Text 3
      span.m-dropdown__menu-item Text 4

div(class=`test-dropdown-range`)
  span.a-h2 Range
  .-d--flex
    .m-dropdown__menu.-active
      .m-dropdown__menu-item
        label.-text.-mr--2 200GB
        input.a-input(type="range")
        label.-text.-ml--2 5TB
      .a-divider
      span.m-dropdown__menu-item Select range
      .m-dropdown__menu-item
        input.a-input(type="range")

div(class=`test-dropdown-toggle`)
  span.a-h2 Toggle input
  .-d--flex
    .m-dropdown__menu.-active
      .m-dropdown__menu-item
        input(type="checkbox", class="a-input -toggle", id="toggle-mail")
        label(for="toggle-mail")
        label(class="-text", for="toggle-mail") Email notifications
      .m-dropdown__menu-item
        input(type="checkbox", class="a-input -toggle", id="toggle-tlf", checked)
        label(for="toggle-tlf")
        label(class="-text", for="toggle-tlf") Phone notifications
      .m-dropdown__menu-item
        input(type="checkbox", class="a-input -toggle", id="toggle-app", disabled)
        label(for="toggle-app")
        label(class="-text", for="toggle-app") App notifications


div(class=`test-dropdown-ellipsis-helper`)
  span.a-h2 Ellipsis helper
  .-d--flex
    .m-dropdown__menu.-active(style="width:10rem")
      a.m-dropdown__menu-item(href='#') Element 1
      a.m-dropdown__menu-item(href='#') Element 2
      a.m-dropdown__menu-item(href='#')
        .-flex--ellipsis Longer text element 3
      a.m-dropdown__menu-item(href='#') Element 4

div(class=`test-dropdown-higher-helper`)
  span.a-h2 Higher menu items helper
  .-d--flex
    .m-dropdown__menu.-active(style="width:10rem")
      a.m-dropdown__menu-item(href="#") Link 1
      .m-dropdown__menu-item.-h--auto.-py--1 Lorem ipsum dolor sit amet, consectetur adipisicing elit.
      a.m-dropdown__menu-item(href="#") Link 2

- var triggerSizes = ["-lg", "", "-sm"];
- var triggerStates = dropdownStates;
- var dropdownPositions = ["", "default", "initial", "top", "right", "bottom", "left", "top-start", "top-end", "right-start", "right-end", "bottom-start", "bottom-end", "left-start", "left-end"];

each triggerSize in triggerSizes
  div(class=`test-dropdown-button${triggerSize}`)
    span.a-h2=`Button${triggerSize}`
    each triggerState in triggerStates
      span.a-h3=`State ${triggerState}`
      each position in dropdownPositions
        .-d--flex
          button(class=`a-btn m-dropdown__trigger ${triggerSize} ${triggerState}`, data-position=position)=`Button ${triggerState} ${position}`
