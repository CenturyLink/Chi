---
title: Dropdown
---

- var dropdownStates = ["", "-active"];
- var textCombinations = [{"t_text": "Click me", "d_text": "Element"}, {"t_text": "Long trigger text, click me", "d_text": "Element"}, {"t_text": "Click me", "d_text": "Long text dropdown element"}];
- var menuItemStates = [{"title":"Normal", "class": ""}, {"title":"Active", "class": "-active"}, {"title":"Disabled", "class": "-disabled"}, {"title":"Hover", "class": "-hover"}];

each menuItemState in menuItemStates
  div(class=`test-basicDropdown${menuItemState.class}`)
    span.a-h2=menuItemState.title
    .-d--flex
      each textCombination in textCombinations
        each dropdownState in dropdownStates
          .m-dropdown(style="margin-bottom: 8em")
            button(class=`a-btn m-dropdown__trigger ${dropdownState}`)=textCombination.t_text
            div(class=`m-dropdown__menu ${dropdownState}`)
              each i in [1, 2, 3]
                a(class=`m-dropdown__menu-item ${menuItemState.class}`, href='#')=textCombination.d_text + " " + i

div(class=`test-dropdown-divider`)
  span.a-h2 Divider
  .-d--flex
    div(class=`m-dropdown__menu -active`)
      each i in [1, 2]
        a(class=`m-dropdown__menu-item`, href='#')="Text " + i
      .a-divider
      each i in [3, 4]
        a(class=`m-dropdown__menu-item`, href='#')="Text " + i


div(class=`test-dropdown-icons`)
  span.a-h2 Icons
  .-d--flex
    .m-dropdown__menu.-active
      a.m-dropdown__menu-item(href='#')
        .a-icon
          svg
            use(xlink:href='#icon-file-outline')
        = "New"
      a.m-dropdown__menu-item.-disabled(href='http://www.centurylink.com')
        .a-icon
          svg
            use(xlink:href='#icon-arrow-to-bottom')
        = "Save"
      .a-divider
      a.m-dropdown__menu-item(href='#')
        .a-icon
          svg
            use(xlink:href='#icon-mail')
        = "Send"
      a.m-dropdown__menu-item.-active(href='#')
        .a-icon
          svg
            use(xlink:href='#icon-cart')
        = "Buy"
      a.m-dropdown__menu-item.-hover(href='#')
        .a-icon
          svg
            use(xlink:href='#icon-users')
        = "Share"
      .a-divider
      a.m-dropdown__menu-item(href='#')
        .a-icon
          svg
            use(xlink:href='#icon-logout')
        = "Logout"

div(class=`test-dropdown-searchBox`)
  span.a-h2 Search box
  .-d--flex
    .m-dropdown__menu.-active
      .m-input__wrapper.-icon--left.m-dropdown__menu-item
        input(type="text", class="a-input", placeholder="Search")
        .a-icon
          svg
            use(xlink:href='#icon-search')
      a.m-dropdown__menu-item(href='#') Element 1
      a.m-dropdown__menu-item(href='#') Element 2

- var inputStates = ["", "disabled", "checked"]
div(class=`test-dropdown-checkbox`)
  span.a-h2 checkbox
  .m-dropdown__menu.-active
    each inputState in inputStates
      .m-dropdown__menu-item
        input(type="checkbox", class="a-input", checked=(inputState==="checked"), disabled=(inputState==="disabled"))
        label.-text(for=`checkbox${inputState}`)="Element checkbox " + inputState

div(class=`test-dropdown-checkbox-icon`)
  span.a-h2 checkbox with icons
  .m-dropdown__menu.-active
    each inputState in inputStates
      .m-dropdown__menu-item
        input(type="checkbox", class="a-input", checked=(inputState==="checked"), disabled=(inputState==="disabled"))
        label.-text(for=`checkbox${inputState}`)
          .a-icon
            svg
              use(xlink:href='#icon-logo-centurylink')
          ="Element checkbox " + inputState

