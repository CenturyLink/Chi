              return ((statusA < statusB) ? -1 : ((statusA > statusB) ? 1 : 0));
            } else{
              return ((statusA < statusB) ? 1 : ((statusA > statusB) ? -1 : 0));
            }
          });

          this.sortedData = copiedTableBodyData;
          this.table = {
            ...this.table,
            body:  this.sortedData.slice(0, this.config.resultsPerPage),
          };
        }
