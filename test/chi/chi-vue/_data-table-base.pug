        if(!e.direction){
          this.sortedData = [];

          const apiResponsePageData = this.fakeApiCall(this.config.pagination.activePage);

          this.table = {
            ...this.table,
            body: [...apiResponsePageData],
          };
        } else{
          const columnIndex = Object.keys(this.table.head).indexOf(e.column);
