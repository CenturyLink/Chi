h2 Column Customization
h3 Base
.test-column-customization.-p--3#base
  chi-vue-column-customization(data-cy="column-customization-base" ref="baseColumnCustomizationRef" :columns-data="columnsData")

h3 No Locked Columns
.test-column-customization.-p--3#no-locked
  chi-vue-column-customization(data-cy="column-customization-no-locked" :columns-data="columnsData")

script.
  const exampleColumns = [
    {
      name: 'columnE',
      label: 'Column E',
      selected: true,
    },
    {
      name: 'columnB',
      label: 'Column B',
    },
    {
      name: 'columnA',
      label: 'Column A',
    },
    {
      name: 'columnC',
      label: 'Column C',
      locked: true,
      selected: true,
    },
    {
      name: 'columnD',
      label: 'Column D',
      locked: true,
      selected: true,
    },
    {
      name: 'columnF',
      label: 'Column F',
      selected: true,
    },
    {
      name: 'columnJ',
      label: 'Column J',
    },
    {
      name: 'columnG',
      label: 'Column G',
    },
    {
      name: 'columnI',
      label: 'Column I',
    },
    {
      name: 'columnH',
      label: 'Column H',
    },
  ];

  const baseApp = Vue.createApp({
    data() {
      return {
        columnsData: {
          columns: exampleColumns,
        },
      }
    },
    mounted() {
      if (window.Cypress) {
        window.baseColumnCustomizationExample = this;
      }
    }
  });

  baseApp.component('chiVueColumnCustomization', window["chi-vue"].library.components.ChiColumnCustomization);
  baseApp.mount('#base');

  const exampleColumnsWithoutLocked = [
    {
      name: 'columnE',
      label: 'Column E',
      selected: true,
    },
    {
      name: 'columnB',
      label: 'Column B',
    },
    {
      name: 'columnA',
      label: 'Column A',
    },
    {
      name: 'columnC',
      label: 'Column C',
      selected: true,
    },
    {
      name: 'columnD',
      label: 'Column D',
      selected: true,
    },
    {
      name: 'columnF',
      label: 'Column F',
      selected: true,
    },
    {
      name: 'columnJ',
      label: 'Column J',
    },
    {
      name: 'columnG',
      label: 'Column G',
    },
    {
      name: 'columnI',
      label: 'Column I',
    },
    {
      name: 'columnH',
      label: 'Column H',
    },
  ];

  const noLockedApp = Vue.createApp({
    data() {
      return {
        columnsData: {
          columns: exampleColumnsWithoutLocked,
        },
      }
    },
  });

  noLockedApp.component('chiVueColumnCustomization', window["chi-vue"].library.components.ChiColumnCustomization);
  noLockedApp.mount('#no-locked');
