      fakeApiCall(page) {
        if(this.$data.sortedData.length){
          return page === 1 ? this.sortedData.slice(0, this.$data.config.resultsPerPage) : page === 2 ? this.sortedData.slice(this.$data.config.resultsPerPage) : null
