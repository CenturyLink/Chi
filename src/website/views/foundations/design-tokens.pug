h3 Text
section.chi-table.-xs.-mt--2.-mb--4
  div
    table.-text
      thead
        tr.-text--grey
          th
            div Token
          th
            div Value
          th
            div Example
          th
            div Contrast
      tbody
        each value, index in textColor
          tr
            td(width='35%')
              code=`$color-text-${index}`
            td(width='25%')
              div.-text=value.hex
            td(width='20%')
              if index === 'white' || index === 'secondary'
                div.-text--lg.-lh--2.-rounded.-d--inline-block(style=`background-color:#000;padding:2px;color:${value.hex};`) Aa
              else
                div.-text--lg.-lh--2(style=`color:${value.hex};`) Aa
            td(width='20%')
              div.-text
                if index === 'secondary-dark' || index === 'primary-alt'
                  i.chi-icon.icon-warning.-xs.-icon--warning.-mr--1
                else
                  i.chi-icon.icon-check.-xs.-icon--success.-mr--1
                span=value.contrast
                  div.-text--sm.-text--muted.-lh--2
                    if index === 'secondary-dark'
                      | 20px+ text only
                    if index === 'primary-alt'
                      | White backgrounds only

