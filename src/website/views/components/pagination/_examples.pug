h3 Active
p.-text Apply the class <code>-active</code> to indicate the current page.
.example.-mb--3
  .-p--5
    nav.a-pagination(role='navigation', aria-label='Pagination')
      .m-btnGroup
        each step in steps
          if step == '0'
            a(class=`a-btn`, href='#', aria-label='Previous')
              i(class="a-icon icon-chevron-left", aria-hidden='true')
              span.-sr--only Previous
          else if step == '3'
            a(class=`a-btn -active`, href='#')= `${step}`
          else if step == '6'
            a(class=`a-btn`, href='#', aria-label='Next')
              i(class="a-icon icon-chevron-right", aria-hidden='true')
              span.-sr--only Next
          else
            a(class=`a-btn`, href='#')= `${step}`
  :code(lang="html")
    <nav class="a-pagination" role="navigation" aria-label="Pagination">
      <div class="m-btnGroup">
        <a href="#" class="a-btn" aria-label="Previous">
          <i class="a-icon icon-chevron-left" aria-hidden="true"></i>
          <span class="-sr--only">Previous</span>
        </a>
        <a href="#" class="a-btn">1</a>
        <a href="#" class="a-btn">2</a>
