script.
  document.addEventListener(
    'DOMContentLoaded',
    function() {
      const accordionBase = document.getElementById('example-base');
      const accordionPortalBase = document.getElementById('example-portal-base');
      const accordionPortalCard = document.getElementById('example-portal-card');
      const accordionNested = document.getElementById('example-nested');
      const accordionPortalNested = document.getElementById('example-portal-nested');
      const individualAccordions = chi.accordion(document.getElementById('individual-accordion-items'));
      const individualPortalAccordions = chi.accordion(document.getElementById('individual-portal-accordion-items'));
      const toggleAccordionOne = document.getElementById('toggle-accordion-1');
      const toggleAccordionTwo = document.getElementById('toggle-accordion-2');
      const togglePortalAccordionOne = document.getElementById('toggle-accordion-portal-1');
      const togglePortalAccordionTwo = document.getElementById('toggle-accordion-portal-2');
      const expandCollapseAccordion = chi.accordion(document.getElementById('expand-collapse'));
      const expandCollapsePortalAccordion = chi.accordion(document.getElementById('expand-collapse-portal'));
      const expandAll = document.getElementById('expand-all');
      const expandAllPortal = document.getElementById('expand-all-portal');
      const collapseAll = document.getElementById('collapse-all');
      const collapseAllPortal = document.getElementById('collapse-all-portal');

      chi.tab(document.querySelectorAll('.chi-tabs-panel .chi-tabs'));
      chi.accordion(accordionBase);
      chi.accordion(accordionPortalBase);
      chi.accordion(accordionPortalCard);
      chi.accordion(accordionNested);
      chi.accordion(accordionPortalNested);
      toggleAccordionOne.addEventListener('click', function() {
        individualAccordions.toggle(document.getElementById('invividual-accordion-item-1'));
      });
      toggleAccordionTwo.addEventListener('click', function() {
        individualAccordions.toggle(document.getElementById('invividual-accordion-item-2'));
      });
      togglePortalAccordionOne.addEventListener('click', function() {
        individualPortalAccordions.toggle(document.getElementById('invividual-portal-accordion-item-1'));
      });
      togglePortalAccordionTwo.addEventListener('click', function() {
        individualPortalAccordions.toggle(document.getElementById('invividual-portal-accordion-item-2'));
      });
      expandAll.addEventListener('click', function() {
        expandCollapseAccordion.expandAll();
      });
      collapseAll.addEventListener('click', function() {
        expandCollapseAccordion.collapseAll();
      });
      expandAllPortal.addEventListener('click', function() {
        expandCollapsePortalAccordion.expandAll();
      });
      collapseAllPortal.addEventListener('click', function() {
        expandCollapsePortalAccordion.collapseAll();
      });
      chi.accordion(document.getElementById('example-truncated'));
      chi.accordion(document.getElementById('example-portal-truncated'));
      chi.accordion(document.getElementById('example-size-sm'));
      chi.accordion(document.getElementById('example-size-md'));
      chi.accordion(document.getElementById('example-size-lg'));
      chi.accordion(document.getElementById('example-size-xl'));
      chi.accordion(document.getElementById('portal-example-size-sm'));
      chi.accordion(document.getElementById('portal-example-size-md'));
    }
  );
