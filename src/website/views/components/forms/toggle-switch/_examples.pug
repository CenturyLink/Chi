h2 Examples

h3 Base
.example.-mb--3
  .-p--3
    .chi-form__item
      chi-switch(id='toggle1',label='Label')
  .example-tabs.-pl--2
    ul.chi-tabs#example-default
      li.-active
        a(href=`#webcomponent-base`) Web Component
      li
        a(href=`#html-base`) HTML Blueprint
  .chi-tabs-panel.-active#webcomponent-base
    :code(lang="html")
      <chi-switch id="toggle1" label="Label"></chi-switch>
  .chi-tabs-panel#html-base
    :code(lang="html")
      <div class="chi-form__item">
        <label class="chi-switch" for="toggle1">
          <input type="checkbox" class="chi-switch__input" id="toggle1">
          <span class="chi-switch__content">
            <span class="chi-switch__thumb"></span>
          </span>
          <span class="chi-switch__label">Label</span>
        </label>
      </div>

