p.-text
  | Checkbox lists are used to wrap a series of checkboxes in a list.
  | To render a series of checkboxes in a list, apply the class <code>-list</code> to <code>chi-form__item</code>.
.example.-mb--3
  .-p--3
    legend.chi-label Select options
    ul.chi-form__item.-list(style="max-width:20rem")
      li.chi-form__item
        .chi-checkbox
          input(type="checkbox", class="chi-checkbox__input", id="checkbox__list1")
          label(for="checkbox__list1", class="chi-checkbox__label") Option 1
      li.chi-form__item
        .chi-checkbox
          input(type="checkbox", class="chi-checkbox__input", id="checkbox__list2")
          label(for="checkbox__list2", class="chi-checkbox__label") Option 2
      li.chi-form__item
        .chi-checkbox
          input(type="checkbox", class="chi-checkbox__input", id="checkbox__list3")
          label(for="checkbox__list3", class="chi-checkbox__label") Option 3
      li.chi-form__item
        .chi-checkbox
          input(type="checkbox", class="chi-checkbox__input", id="checkbox__list4")
          label(for="checkbox__list4", class="chi-checkbox__label") Option 4
      li.chi-form__item
        .chi-checkbox
          input(type="checkbox", class="chi-checkbox__input", id="checkbox__list5")
          label(for="checkbox__list5", class="chi-checkbox__label") Option 5
  .example-tabs.-pl--2
    ul.chi-tabs#example-list
      li.-active
        a(href=`#webcomponent-list`) Web Component
      li
        a(href=`#html-list`) HTML Blueprint
  .chi-tabs-panel.-active#webcomponent-list
    :code(lang="html")
      <fieldset>
        <legend>
          <chi-label for="checkbox__list">Select options</chi-label>
        </legend>
        <ul class="chi-form__item -list">
          <li class="chi-form__item">
            <chi-checkbox id="checkbox__list1" label="Option 1"></chi-checkbox>
          </li>
          <li class="chi-form__item">
            <chi-checkbox id="checkbox__list2" label="Option 2"></chi-checkbox>
          </li>
          <li class="chi-form__item">
            <chi-checkbox id="checkbox__list3" label="Option 3"></chi-checkbox>
          </li>
          <li class="chi-form__item">
            <chi-checkbox id="checkbox__list4" label="Option 4"></chi-checkbox>
          </li>
          <li class="chi-form__item">
            <chi-checkbox id="checkbox__list5" label="Option 5"></chi-checkbox>
          </li>
        </ul>
      </fieldset>
  .chi-tabs-panel#html-list
    :code(lang='html')
      <fieldset>
        <legend class="chi-label">Select options</legend>
        <ul class="chi-form__item -list">
          <li class="chi-form__item">
            <div class="chi-checkbox">
              <input type="checkbox" class="chi-checkbox__input" id="checkbox__list1">
              <label class="chi-checkbox__label" for="checkbox__list1">Option 1</label>
            </div>
          </li>
          <li class="chi-form__item">
            <div class="chi-checkbox">
              <input type="checkbox" class="chi-checkbox__input" id="checkbox__list2">
              <label class="chi-checkbox__label" for="checkbox__list2">Option 2</label>
            </div>
          </li>
          <li class="chi-form__item">
            <div class="chi-checkbox">
              <input type="checkbox" class="chi-checkbox__input" id="checkbox__list3">
              <label class="chi-checkbox__label" for="checkbox__list3">Option 3</label>
            </div>
          </li>
          <li class="chi-form__item">
            <div class="chi-checkbox">
              <input type="checkbox" class="chi-checkbox__input" id="checkbox__list4">
              <label class="chi-checkbox__label" for="checkbox__list4">Option 4</label>
            </div>
          </li>
          <li class="chi-form__item">
            <div class="chi-checkbox">
              <input type="checkbox" class="chi-checkbox__input" id="checkbox__list5">
              <label class="chi-checkbox__label" for="checkbox__list5">Option 5</label>
            </div>
          </li>
        </ul>
      </fieldset>

script.
  document.addEventListener(
    'DOMContentLoaded',
    function() {
      chi.tab(document.querySelectorAll('.chi-tabs-panel .chi-tabs'));
      chi.popover(document.getElementById('example__help-button'));

      var checkbox = document.getElementById("checkbox__indeterminate");
      
      checkbox.indeterminate = true;
    }
  );
