      each type in ['text--primary', 'text--success', 'text--warning', 'text--danger', 'text--muted']
        div.-p--2
          svg(class=`a-spinner -${type} -md -m--3`,viewBox=`0 0 66 66`)
            title Loading
            circle(class=`path`,cx=`33`,cy=`33`,r=`30`,fill=`none`,stroke-width=`6`)
            p.-text(class=`-${type}`)
