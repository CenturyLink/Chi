              <button class="chi-btn -icon -close" data-dismiss="modal" aria-label="Close">
                <div class="chi-btn__content">
                  <i class="chi-icon icon-x"></i>
                </div>
              </button>
            </header>
            <div class="chi-modal__content">
              <p class="-text -m--0">Modal content</p>
            </div>
            <footer class="chi-modal__footer">
              <button class="chi-btn" data-dismiss="modal">Cancel</button>
              <button class="chi-btn -primary -ml--2">Save</button>
            </footer>
