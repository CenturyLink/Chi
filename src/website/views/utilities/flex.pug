    .-mb--2.-d--flex(style="background:#F2FAE6;")
      each item in new Array(3)
        .-text.-p--2.-b--1.-flex--fill(style="background:#E4F2CE;border-color:#C6DBA7;") Item
  :code(lang="html")
    <div class="-d--flex">
      <div class="-flex--fill">Item</div>
      <div class="-flex--fill">Item</div>
      <div class="-flex--fill">Item</div>
    </div>
