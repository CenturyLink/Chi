      table.-text(cellpadding='0', cellspacing='0')
        thead
          tr
            th
              div Color Class
            th
              div Value
            th
              div Result
        tbody
          each val, type in {'primary': '#0075C9', 'secondary': '#38C6F4', 'black': '#000000', 'white': '#FFFFFF'}
            tr
              td(width='25%')
                code= '-bg--' + type
              td(width='35%')
                code= 'background-color:' + val
