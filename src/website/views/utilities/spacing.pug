      .-mr--3.example-spacing-margin
        .-mt--3.example-spacing-margin__block
      .-mr--3.example-spacing-margin
        .-mb--3.example-spacing-margin__block
      .-mr--3.example-spacing-margin
        .-ml--3.example-spacing-margin__block
      .-mr--3.example-spacing-margin
        .-mr--3.example-spacing-margin__block
      .-mr--3.example-spacing-margin
        .-mx--3.example-spacing-margin__block
      .-mr--3.example-spacing-margin
        .-my--3.example-spacing-margin__block
