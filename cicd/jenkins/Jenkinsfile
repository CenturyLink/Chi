      }
      stage ('Building Chi') {
        agent {
          dockerfile {
            filename 'Dockerfile'
            dir 'cicd/docker/sonar-scanner'
            label 'Docker-enabled'
            args '-m 2G --shm-size=2gb'
          }
        }
        when {
            allOf {
              not {tag pattern: RC_TAG_PATTERN, comparator: "REGEXP"}
              not {tag pattern: PROMOTE_TAG_PATTERN, comparator: "REGEXP"}
