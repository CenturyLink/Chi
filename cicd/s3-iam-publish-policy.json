{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "RWobjects",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject"
            ],
            "Resource": "arn:aws:s3:::assets.ctl.io/ux-chi/*"
        },
        {
            "Sid": "ListBuckets",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::assets.ctl.io"
            ],
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "ux-chi/*"
                    ]
                }
            }
        }
    ]
}